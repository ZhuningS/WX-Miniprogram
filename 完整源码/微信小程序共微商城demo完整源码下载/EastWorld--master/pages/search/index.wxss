view,button,input,textarea,select,text {
    box-sizing: border-box;
}

.rec-img,.ads-img,.swiper-box,.goods-img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.search {
    transition: all 0.5s ease;
}

.malllist {
    width: 100%;
    margin-top: 100rpx;
}

.swiper {
    width: 100%;
    position: relative;
    padding-bottom: 50%;
}

.swiper-img {
    width: 100%;
    height: 100%;
}

page .wx-swiper-dot {
    content: '';
    width: 14rpx;
    height: 14rpx;
    border-radius: 50rpx;
}

page .wx-swiper-dots.wx-swiper-dots-horizontal {
    bottom: 0;
    overflow: visible;
    font-size: 0;
    padding: 0 2rpx;
}

.search {
    position: fixed;
    left: 0;
    top: 0;
    padding: 16rpx 30rpx;
    width: 100%;
    z-index: 9;
    background: linear-gradient(top,rgba(0,0,0,.7),rgba(0,0,0,0));
}

.address {
    max-width: 200rpx;
    line-height: 32px;
    padding: 0 20rpx;
    font-size: 14px;
}

.search-box {
    background: #fff;
    border-radius: 100rpx;
    opacity: 0.7;
    height: 32px;
}

.search-input {
    height: 32px;
    padding: 0 20rpx;
    text-align: center;
    vertical-align: top;
}

button.search-btn {
    background: none;
    padding: 0 0.8em;
}

button.search-btn icon {
    vertical-align: top;
    margin-top: 15rpx;
}

.search-btn::after {
    display: none;
}

.saoyisao,.contact-button {
    background: none;
    margin: 0;
    padding: 0;
    width: 100rpx;
    color: #fff;
    font-size: 48rpx;
    line-height: 64rpx;
}

.contact-button::after {
    display: none;
}

.search-active .search-box {
    opacity: 1;
}

.m-img,.goods-img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.filter-box {
    height: 92rpx;
}

.filter {
    background: #fff;
    height: 92rpx;
    line-height: 92rpx;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    font-size: 14px;
    z-index: 999;
}

.price-rank,.filter-item {
    position: relative;
}

.price-rank:after,.price-rank:before,.filter-item::after {
    content: "";
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 5px;
    border: 5px solid;
    border-color: transparent transparent #ccc transparent;
    transform: translateY(-110%);
    position: absolute;
    right: calc(50% - 60rpx);
    top: 50%;
}

.price-rank:before {
    transform: translateY(0%) rotate(180deg);
}

.price-rank.active.pr-arrow:before {
    border-bottom-color: #ccc;
}

.filter-item::after {
    transform: translateY(-30%) rotate(180deg);
}

.type {
    padding: 0 60rpx 0 40px;
}

.type::after {
    right: calc(50% - 60rpx);
}

.m-item {
    background: #fff;
    padding: 20rpx 30rpx;
    margin-top: 6rpx;
}

.m-box {
    overflow: hidden;
}

.m-tit {
    line-height: 140%;
}

.m-imgbox {
    width: 100px;
    height: 100px;
    position: relative;
    margin-right: 20rpx;
}

.m-info {
    line-height: 120%;
}

.goods-tit {
    margin-top: 16rpx;
    padding: 20rpx 0;
    position: relative;
}

.goods-tit::after,.goods-tit::before {
    content: "";
    position: absolute;
    display: block;
    border-top: 1px solid #ececec;
    top: 50%;
    width: calc(50% - 120rpx);
}

.goods-tit::after {
    left: 0;
}

.goods-tit::before {
    right: 0;
}

.goods {
    padding: 0 16rpx 16rpx;
}

.goods-item {
    width: 49%;
    background: #fff;
    margin-top: 2%;
    float: left;
}

.goods-item:nth-child(2n) {
    margin-left: 2%;
}

.goods-imgbox {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
}

.goods-info {
    margin: 10rpx;
}

.icon-cu,.icon-vip {
    font-size: 36rpx;
}

.tips-foot {
    padding: 20rpx 0;
    position: relative;
}

.tips-foot::after,.tips-foot::before {
    content: "";
    position: absolute;
    display: block;
    border-top: 1px solid #ececec;
    top: 50%;
    width: calc(50% - 160rpx);
}

.tips-foot::after {
    left: 0;
}

.tips-foot::before {
    right: 0;
}

.backtop {
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    z-index: 9;
    font-size: 48rpx;
}

.backtop .iconfont {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 50%;
    display: block;
    color: #fff;
    opacity: 0.9;
    margin-top: 20rpx;
}

.good-price,.goods-price {
    color: #f35150;
}

.icon-cu {
    color: #007cff;
}

.icon-vip {
    color: #fe8a0d;
}

.add-cart-box {
    z-index: 999;
}

.layout {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
    z-index: 1;
}

.layout-info {
    padding: 10px;
    line-height: 30px;
}

.layout-info image {
    width: 46px;
    height: 46px;
}

.layout-info .sub {
    line-height: 23px;
    overflow: hidden;
}

.options {
    padding: 0 10px;
    display: block;
    width: 100%;
    clear: both;
}

.options-tiem {
    padding: 15px 0;
    overflow: hidden;
}

.count-set {
    width: auto;
    border: 1px solid #eee;
}

.count-set text {
    display: block;
    line-height: 30px;
    padding: 0 15px;
}

.buy-couts {
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    width: 90rpx;
    height: 30px;
}

.count-set .flase,.count-set text:active {
    background: rgba(0,0,0,0.05);
    color: #999;
}

.add-cart-btn {
    background: #e64340;
    color: #fff;
    border-radius: 0;
    font-size: 30rpx;
    line-height: 46px;
    height: 46px;
}

.add-cart-btn::after {
    border: none;
}

.attr_list {
    padding: 10px 10px 5px 10px;
    width: 100%;
    clear: both;
    display: block;
}

.attr_list_t {
    float: left;
}

.attr_list_li {
    float: left;
    padding: 0px 10px;
    border: 1px solid #ddd;
    margin-right: 5px;
    margin-bottom: 5px;
}

.on {
    border: 1px solid #f00;
    color: #fff;
    background: #f00;
}

.icon-close {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 1px solid #ccc;
    line-height: 24px;
    text-align: center;
    margin: 5px 5px 0 0;
}

