@import "../comment/main.wxss";

.comment .textarea {
    width: 730rpx;
    height: 200rpx;
    padding: 10rpx 20rpx;
    background: #eee;
}

.comment .btn-comment {
    margin-top: 20rpx;
}

.comment .location {
    margin-top: 10rpx;
    padding-left: 20rpx;
}

.comment .phone {
    padding-left: 20rpx;
    margin-top: 10rpx;
}

.badge {
    display: inline-block;
    margin: 10rpx;
    border-radius: 20rpx;
    border: 2rpx #EA5A49 solid;
    padding: 10rpx;
    color: #EA5A49;
}

.bookinfo {
    overflow: hidden;
    position: relative;
    margin-bottom: 10rpx;
    font-size: 28rpx;
}

.bookinfo .summary {
    margin-top: 20rpx;
    padding: 0 30rpx;
}

.bookinfo .summary ._p {
    text-indent: 2em;
    font-size: 28rpx;
}

.bookinfo .thumb {
    width: 750rpx;
    height: 500rpx;
    position: relative;
    overflow: hidden;
}

.bookinfo .thumb .back {
    filter: blur(30rpx);
    width: 100%;
}

.bookinfo .thumb .img {
    position: absolute;
    width: 100%;
    height: 300rpx;
    left: 0;
    top: 30rpx;
}

.bookinfo .thumb .info {
    color: white;
    position: absolute;
    width: 100%;
    left: 0;
    top: 330rpx;
    text-align: center;
}

.bookinfo .thumb .info .author {
    font-size: 28rpx;
}

.bookinfo .thumb .info .title {
    font-size: 40rpx;
}

.bookinfo .owner {
    padding: 10rpx;
}

.bookinfo .owner .avatar {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.bookinfo .detail {
    padding: 10rpx;
}