.custom_line {
    width: 100%;
    background: #fff;
    display: flex;
    align-items: center;
    padding: 0 0rpx;
    margin: 10rpx 0;
}

.maxwidth {
    padding: 0 0rpx;
    margin: 0;
}

.custom_line .line {
    height: 0rpx;
    width: 100%;
    margin: 20rpx 0;
}

.custom_line .solid {
    border-top: 1rpx solid #cecbcb;
}

.custom_line .dashed {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/line.png) no-repeat 0px 48%;
    background-size: 690rpx auto;
    display: block;
    width: 690rpx;
    height: 30rpx;
    margin: 0 auto;
}

.custom_line .dotted {
    background: url(http://yamxcx.oss-cn-shenzhen.aliyuncs.com/xcx/dian.png) no-repeat 0px 48%;
    background-size: 690rpx auto;
    display: block;
    width: 690rpx;
    height: 30rpx;
    margin: 0 auto;
}

.custom_line .colorBlock {
    border: 10rpx solid #f4f4f4;
}

.custom_line .colorWhite {
    border: 10rpx solid #fff;
}