.gzh-follow-view {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 750rpx;
    height: 180rpx;
    background-color: #ffffff;
}

.gzh-left-title {
    font-size: 20rpx;
    color: #888888;
    width: 100%;
    margin-left: 30rpx;
    margin-top: 10rpx;
}

.gzh-content-view {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 25rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.gzh-image {
    margin-left: 30rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
}

.gzh-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    flex: 1;
    margin: 0 20rpx;
}

.gzh-name {
    width: 100%;
    font-size: 30rpx;
    color: #555555;
}

.gzh-desc {
    width: 460rpx;
    font-size: 26rpx;
    color: #888888;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.gzh-follow-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 110rpx;
    height: 50rpx;
    border-radius: 25rpx;
    border: solid 2rpx #ff7800;
    font-size: 26rpx;
    color: #ff7800;
    margin-right: 30rpx;
}