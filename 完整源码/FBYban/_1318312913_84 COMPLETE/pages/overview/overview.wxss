.category-name {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: bold;
    font-size: 20px;
    line-height: 25px;
}

.section-title {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 40px 60rpx 0;
    font-weight: bold;
    font-size: 16px;
    line-height: 20px;
}

.section-title .icon {
    width: 20px;
    height: 20px;
}

.section-title .button {
    padding-right: 0;
}

.section-title .avatar-ctn {
    margin-right: -5px;
}

.recent-publication-container {
    margin-top: 40px;
}

.recent-publication-container>.title {
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: bold;
    font-size: 16px;
    max-height: 20px;
    padding: 0 60rpx;
    line-height: 22px;
}

.recent-publication-container>.publication-container {
    margin-top: 16px;
    width: 750rpx;
    padding: 0 60rpx;
}

.recent-publication-container>.publication-container .publication-wrapper {
    display: flex;
}

.recent-publication-container>.publication-container .publication-wrapper .publication-item {
    width: 60px;
    display: flex;
    flex-direction: column;
}

.recent-publication-container>.publication-container .publication-wrapper .publication-item .logo {
    margin: 0 auto 8px;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: #F8CD1C;
}

.recent-publication-container>.publication-container .publication-wrapper .publication-item .title {
    width: 60px;
    margin: 0 auto;
    font-size: 12px;
    line-height: 12px;
    height: 12px;
    font-weight: bold;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.recent-publication-container>.publication-container .publication-wrapper .publication-item+.publication-item {
    margin-left: 40rpx;
}

.tags .tags-ctn .category-name {
    box-sizing: border-box;
    display: block;
    width: 630rpx;
    background-color: rgba(0,0,0,0.05);
    padding: 30rpx;
    font-weight: bold;
    font-size: 16px;
    line-height: 20px;
    margin: 0 15px 20px 0;
}

.cate-ctn .cate-title {
    font-weight: bold;
    align-items: center;
    display: flex;
    font-size: 20px;
    line-height: 28px;
}

.cate-ctn .cate-title .icon {
    height: 20px;
    margin-left: 10px;
    width: 20px;
}

.cate-ctn .forbidden {
    color: #ACACAC;
}

.cate-ctn .cate {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20px;
}

.hidden-ctn {
    background: #F2F2F2;
    padding: 40px 0;
    margin-top: 40px;
}

.hidden-ctn .page-name {
    margin-top: 0;
}

.about-ctn {
    height: 64px;
    width: 100%;
    font-size: 20px;
    background-color: #FFFFFF;
    text-align: center;
    font-size: 14px;
}