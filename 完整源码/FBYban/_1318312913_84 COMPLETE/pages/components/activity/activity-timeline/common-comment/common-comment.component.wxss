.slim-comment {
    padding: 40rpx 40rpx 0;
    font-size: 14px;
}

.slim-comment .comment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.slim-comment .comment-header-relation .user {
    font-weight: bold;
}

.slim-comment .comment-header-markCount {
    color: #000000;
    display: flex;
    align-items: center;
    font-size: 12px;
}

.slim-comment .comment-header-markCount.isMarked {
    color: #D0021B;
}

.slim-comment .comment-body .comment-body-text {
    max-width: 450rpx;
    line-height: 18px;
}

.slim-comment .comment-body .comment-body-image {
    width: 100%;
    vertical-align: middle;
}

.rich-comment {
    display: flex;
    justify-content: flex-start;
    font-size: 14px;
    margin-top: 40rpx;
}

.rich-comment.isSelf {
    flex-flow: row-reverse;
}

.rich-comment.isSelf .comment-section {
    margin-left: 0;
    margin-right: 28rpx;
}

.rich-comment .comment-section {
    width: 550rpx;
    background-color: #FFFFFF;
    margin-left: 28rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.rich-comment .comment-section .comment-content {
    padding: 22rpx 0;
}

.rich-comment .comment-section .comment-content .user {
    font-weight: bold;
}

.rich-comment .comment-section .comment-infos {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    font-size: 12px;
    color: #999999;
}

.rich-comment .comment-section .comment-infos .time-divider {
    position: absolute;
    top: 0;
    left: 0;
    width: 88rpx;
    height: 2rpx;
    border-top: 1rpx solid #DDD;
}

.rich-comment .comment-section .comment-infos .comment-markCount {
    color: #000000;
    display: flex;
    align-items: center;
    font-size: 12px;
}

.rich-comment .comment-section .comment-infos .comment-markCount.isMarked {
    color: #D0021B;
}

