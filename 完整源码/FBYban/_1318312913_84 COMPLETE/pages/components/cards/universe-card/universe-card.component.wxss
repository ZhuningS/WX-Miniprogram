@charset "UTF-8";

.card {
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 220rpx;
    background-color: #FFFFFF;
    overflow: hidden;
}

.card.size-grande {
    width: 670rpx;
}

.card.size-tall {
    width: 320rpx;
}

.card.has-read .card-header,.card.has-read .card-body,.card.has-read .card-footer {
    opacity: 0.3;
}

.card .card-body .info-repost,.card .card-body .original-wrapper {
    padding: 0 20px;
    margin-top: -5px;
    font-size: 16px;
    font-weight: 500;
    word-wrap: break-word;
}

.card .card-body .hero-title {
    display: flex;
    line-height: 24px;
    padding: 15px 20px 0;
    font-size: 20px;
    font-weight: 500;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}

.card .card-body .hero-title premium-label {
    flex-shrink: 0;
    transform: translateY(2.3px);
}

.card .card-body .hero-title.hide-component-padding {
    padding-left: 0;
    padding-right: 0;
}

.card .card-footer {
    display: flex;
    justify-content: space-between;
    padding: 18px 20px;
}

.card .card-footer.hide-component-padding {
    padding-left: 2rpx;
    padding-right: 6rpx;
    padding-bottom: 0;
}

.card .card-footer .left-section {
    display: flex;
    align-items: center;
    min-width: 0;
}

.card .card-footer .left-section magazine-name {
    margin-right: 12px;
}

.card .card-footer .left-section .footer-note {
    display: block;
    line-height: 1;
    font-size: 12px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.card .card-footer operations-bar {
    flex-shrink: 0;
}

.card .card-addition {
    border-top: 1rpx solid rgba(0,0,0,0.05);
}

.card .activity-timeline-wrapper {
    background-color: #FFFFFF;
}

.card.ripple-card.media-quote .media-wrapper .hero-title {
    padding-top: 14px;
    font-size: 14px;
    line-height: 20px;
    font-weight: normal;
}

.card.ripple-card.media-quote .media-wrapper .hero-title premium-label {
    transform: translateY(2.7px);
}

.card.ripple-card.media-image-gallery .media-wrapper .hero-title {
    padding-top: 12px;
    font-size: 16px;
    font-weight: normal;
}

.card.ripple-card.media-image-gallery .media-wrapper .hero-title premium-label {
    transform: translateY(4px);
}

.card.ripple-card.without-header.media-entry,.card.ripple-card.without-header.media-quote {
    padding-top: 20px;
}

.card.ripple-card.without-header.hide-component-padding {
    padding-top: 0;
}

.card.activity-card .card-header {
    position: relative;
}

.card.activity-card .card-header .card-header-meta {
    color: rgba(0,0,0,0.2);
    font-size: 14px;
    position: absolute;
    top: 50%;
    right: 20px;
    transform: translateY(-50%);
}

.card.activity-card .original-wrapper .repost-content {
    display: flex;
    margin-bottom: 16rpx;
}

.card.activity-card .original-wrapper .repost-content .repost-content-text {
    width: 100%;
}

.card.activity-card .reference-wrapper {
    background-color: #F9F9F9;
    padding: 40rpx;
    padding-bottom: 30rpx;
}

.card.activity-card .original-wrapper+.reference-wrapper {
    margin-top: 15px;
}

.card.activity-card.media-quote .media-wrapper {
    padding-top: 30rpx;
    padding-bottom: 40rpx;
}

.card.size-tall .card-body .hero-title {
    line-height: 20px;
    padding: 10px 10px 0;
    font-size: 14px;
    font-weight: normal;
}

.card.size-tall .card-body .hero-title premium-label {
    transform: translateY(2.7px);
}

.card.size-tall .card-body .info-repost {
    padding: 0 10px 8px;
    font-size: 14px;
    line-height: 20px;
}

.card.size-tall .card-footer {
    padding: 14px 10px;
}

.card.size-tall .card-footer .magazine-name {
    max-width: 140rpx!important;
}

.card.activity-card.size-tall .info-repost {
    margin-top: 0;
}

.card.activity-card.size-tall.without-header.media-quote {
    padding-top: 15px;
}

.card.activity-card.size-tall .reference-wrapper,.card.activity-card.size-tall .original-wrapper {
    padding: 20rpx;
}

.card.activity-card.size-tall .reference-wrapper .hero-title,.card.activity-card.size-tall .original-wrapper .hero-title {
    padding: 0;
    padding-top: 10px;
    margin-bottom: 5px;
}