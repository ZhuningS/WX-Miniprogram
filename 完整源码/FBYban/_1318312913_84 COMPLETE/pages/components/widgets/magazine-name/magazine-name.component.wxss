.magazine-name {
    display: inline-block;
    text-align: center;
    color: #000000;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
    box-sizing: border-box;
}

.magazine-name:after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: calc(400% - 2px);
    height: calc(400% - 2px);
    border: 2px solid currentColor;
    border-radius: 0;
    transform: scale(0.25);
    transform-origin: 0 0;
    box-sizing: border-box;
}

.magazine-name.size-medium {
    height: 36px;
    line-height: 20px;
    padding: 8px 10px;
    font-size: 14px;
}

.magazine-name.size-small {
    min-width: 60rpx;
    max-width: 240rpx;
    height: 24px;
    line-height: 16px;
    padding: 4px 10px;
    font-size: 12px;
}