.tabs-nav {
    display: flex;
    justify-content: center;
}

.tabs-nav .nav-item {
    font-size: 16px;
    line-height: 22px;
}

.tabs-nav .nav-item.is-selected {
    position: relative;
}

.tabs-nav .nav-item.is-selected:before {
    content: ' ';
    position: absolute;
    z-index: -1;
    height: 60%;
    width: 104%;
    left: 50%;
    transform: translateX(-50%);
    bottom: -5%;
    background-color: #FDF0B4;
}

.tabs-nav .nav-item+.nav-item {
    margin-left: 72rpx;
}