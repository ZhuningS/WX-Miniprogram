.image-wrap {
    position: relative;
    line-height: 0;
    overflow: hidden;
}

.image-wrap premium-label {
    position: absolute;
    z-index: 2;
    right: 0;
    top: 0;
}

.image-wrap.without-image {
    margin-bottom: -10px;
}

.image-wrap.without-image.without-header {
    margin-bottom: 0px;
    margin-top: 6px;
}

.media-image-hero {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    height: 100%;
    min-height: 80px;
    vertical-align: middle;
}