.media-object-publication {
    display: flex;
    margin-bottom: 40rpx;
}

.media-object-publication .publication-book {
    position: relative;
    width: 210rpx;
    height: 316rpx;
    background-color: #FFFFFF;
    box-sizing: border-box;
    position: relative;
    box-sizing: border-box;
}

.media-object-publication .publication-book:after {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: calc(400% - 2px);
    height: calc(400% - 2px);
    border: 2px solid currentColor;
    border-radius: 0;
    transform: scale(0.25);
    transform-origin: 0 0;
    box-sizing: border-box;
}

.media-object-publication .publication-title {
    line-height: 20px;
    margin-top: 17px;
    text-align: center;
}

.media-object-publication .publication-cover {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 210rpx;
    height: 210rpx;
    background-position: center center;
    background-size: cover;
}

.media-object-publication .publication-snippet {
    line-height: 16px;
    margin-top: 9px;
    font-size: 12px;
    font-weight: 300;
    color: #999999;
}