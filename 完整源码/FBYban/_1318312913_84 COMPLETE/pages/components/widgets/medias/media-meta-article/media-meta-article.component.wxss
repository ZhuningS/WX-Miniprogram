@charset "UTF-8";

.meta-article {
    display: flex;
}

.meta-article .article-body {
    flex: 1;
}

.meta-article .article-cover {
    flex-shrink: 0;
    width: 108rpx;
    height: 108rpx;
    margin-left: 40rpx;
}

.meta-article .article-title {
    font-size: 14px;
    font-weight: 500;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}

.meta-article .article-snippet {
    font-size: 12px;
    color: #999999;
    margin-top: 10rpx;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}

.meta-article.in-activity.size-tall {
    padding: 0;
}

.meta-article.in-activity.size-tall .article-cover {
    margin-left: 20rpx;
}

.meta-article.in-activity.size-tall .article-title {
    font-size: 12px;
    line-height: 16px;
    font-weight: 500;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}

.meta-article.in-activity.size-tall .article-snippet {
    font-size: 12px;
    line-height: 16px;
    color: #999999;
    margin-top: 10rpx;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
}