.tip-create-ctn {
    margin: 20px 60rpx 150rpx;
}

.tip-create-ctn .tips-ctn {
    margin-top: 40rpx;
    padding-bottom: 150rpx;
}

.tip-create-ctn .tips-ctn .description {
    font-weight: bold;
}

.tip-create-ctn .tips-ctn .input-ctn {
    margin: 40rpx 0 0;
    position: relative;
}

.tip-create-ctn .tips-ctn .input-ctn .input {
    width: 570rpx;
    height: 90px;
    padding: 20rpx 30rpx;
    font-size: 14px;
    line-height: 20px;
}

.tip-create-ctn .tips-ctn .input-ctn .badge {
    position: absolute;
    top: -10px;
    right: -10px;
    height: 20px;
    width: 20px;
}

.tip-create-ctn .tips-ctn .button {
    margin-top: 40rpx;
}

.confirm-tip {
    position: fixed;
    left: 60rpx;
    bottom: 20px;
    height: 50px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1),0 20px 20px rgba(0,0,0,0.05);
    z-index: 11;
}