.tab-margin {
    display: block;
    width: 100%;
    height: 60px;
}

.tab-nav {
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    background-color: #FFFFFF;
    color: #000000;
    z-index: 10003;
}

.tab-nav .item {
    display: inline-flex;
    height: 60px;
    align-items: center;
    font-weight: bold;
    color: rgba(0,0,0,0.2);
    font-size: 20px;
    line-height: 25px;
    padding: 0 30rpx;
}

.tab-nav .item.selected {
    color: #000000;
}

.tab-nav .item:first-child {
    padding-left: 60rpx;
}

.tab-nav .item:last-child {
    padding-right: 60rpx;
}

.tab-nav.fixed {
    display: flex;
    justify-content: space-around;
}

.tab-nav.fixed .item {
    margin-left: 0;
    margin-right: 0;
}

.tab-nav.left {
    display: flex;
}

.list-ctn {
    position: relative;
}

.list-ctn.clips {
    min-height: 100vh;
    background: rgba(0,0,0,0.8);
}

.list-ctn .card-video {
    margin: 0;
}

.playing-ctn {
    flex: auto;
    position: fixed;
    left: 0;
    top: 0;
    width: 750rpx;
    height: 100vh;
    background-color: rgba(0,0,0,0.7);
}

.playing-ctn .loading {
    position: relative;
    top: 48%;
    left: 345rpx;
    width: 120rpx;
    height: 120rpx;
}

.playing-ctn .video-player-ctn {
    background: #000000;
    color: #FFFFFF;
    margin: 0;
    padding: 40px 60rpx 40px;
}

.playing-ctn .video-player-ctn .video-playing {
    width: 750rpx;
    height: 420rpx;
    margin: 0 -60rpx;
}

.playing-ctn .video-player-ctn .description {
    color: #FFFFFF;
}

.playing-ctn .video-player-ctn .caption {
    color: rgba(255,255,255,0.5);
}