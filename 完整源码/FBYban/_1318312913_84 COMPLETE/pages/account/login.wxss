.login {
    margin: 60rpx;
    width: 630rpx;
    text-align: center;
}

.login .avatar {
    height: 60px;
    width: 60px;
    border-radius: 30px;
    margin-bottom: 30rpx;
}

.login .title {
    color: #000000;
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.login .tip {
    text-align: left;
    color: #FF0000;
    font-size: 12px;
    height: 24px;
    line-height: 24px;
    width: 100%;
    margin-top: 20px;
    margin-bottom: 10px;
}

.login .button {
    width: 100%;
    padding: 16rpx 0;
    margin-bottom: 20rpx;
    font-size: 14px;
    text-align: center;
    background-color: #000000;
    color: #FFFFFF;
}

.login .simple {
    background-color: rgba(255,255,255,0);
    color: rgba(0,0,0,0.4);
}

.login .input-wrapper {
    margin-bottom: 20px;
    text-align: left;
}