.customer-hop-card {
    display: flex;
    flex-direction: row;
    background: #FFFFFF;
}

.customer-hop-card .entry-thumb {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
}

.customer-hop-card .thumb-cover {
    width: 100%;
    height: 100%;
}

.customer-hop-card .entry-body {
    flex: 1;
    padding: 40rpx 50rpx;
}

.customer-hop-card .info-title {
    line-height: 30px;
    margin-bottom: 20rpx;
    font-size: 20px;
    font-weight: 500;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.customer-hop-card .info-description {
    line-height: 20px;
    font-size: 14px;
    color: #999999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}