.customer-hop-card {
    display: flex;
    flex-direction: row;
    background: #FFFFFF;
}

.customer-hop-card .entry-thumb {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
}

.customer-hop-card .thumb-cover {
    width: 100%;
    height: 100%;
}

.customer-hop-card .entry-body {
    flex: 1;
    padding: 40rpx 50rpx;
}

.customer-hop-card .info-title {
    line-height: 30px;
    margin-bottom: 20rpx;
    font-size: 20px;
    font-weight: 500;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.customer-hop-card .info-description {
    line-height: 20px;
    font-size: 14px;
    color: #999999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.page-group-list {
    background-color: #EBEBEB;
    min-height: 100vh;
}

.page-group-list .error-tips {
    padding-top: 160rpx;
    font-size: 20px;
    text-align: center;
}

.page-group-list .customer-hop-list {
    padding: 40rpx;
    padding-bottom: 0;
}

.page-group-list .customer-hop-card {
    margin-bottom: 40rpx;
}

.page-group-list .more-group-tips-wrap {
    display: flex;
    justify-content: center;
    padding: 30rpx 0 70rpx;
}

.page-group-list .more-group-tips {
    font-size: 12px;
    font-weight: 300;
}