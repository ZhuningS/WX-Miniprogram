/**index.wxss**/
#sort{
	background:#f5f5f5;
	padding-top:36rpx;
}
.search{
	margin:0rpx 24rpx 22rpx;
	display:flex;
	justify-content:center;
	}
.search image{
	width:32rpx;
	height:21rpx;
}
.sort_all{
	width:10%;
	position:relative;
	bottom:12rpx;
}
.sort_all .sort_txt{
	font-size:18rpx;
	color:#979797;
	display:block;
}
.search input{
	width:80%;
	padding:0px 30rpx;
	height:56rpx;
	line-height:56rpx;
	background:#e5e5e5;
	border-radius:20rpx;
	color:#979797;
	font-size:24rpx;}
.made_product{
	position:relative;
}
.mask{
	position:absolute;
	top:0rpx;
	left:0rpx;
	height:100vh;
	width:100%;
	background:rgba(0,0,0,0.5);
	overflow:hidden;
	transition:all 2s;
	opacity:1;
}
.product_item{
	font-size:32rpx;
}
.product_item image{
	width:28rpx;
	height:29rpx;
	margin-left:20rpx;
}
.made_sort{
	width:27%;
	position:absolute;
	left:-27%;
	top:0rpx;
	}
.sildeIn{
	transition:all 1s;
	transform:translateX(100%);

}
.slideOut{
	transition:all 1s 0.3s;
	transform:translateX(-100%);
}
.product_sort{
	height:86rpx;
	line-height:86rpx;
	border-bottom:solid 1px #ececec;
	padding:0rpx 45rpx;
	color:#333;}
.made_sort{
	width:160rpx;
	text-align:center;
	background:#fff;
	height:100vh;
}

.made_cont{
	width:100%;
	height:100%;
	overflow:hidden;
	background:#fff;}

.shopping_item{
	margin-top:46rpx;
	border-bottom:solid 1px #f5f5f5;
	padding-bottom:35rpx;
	display:flex;
	justify-content:center;
	width:100%;
	height:160rpx;
	overflow:hidden;
}
.shopping_img{
	overflow:hidden;
	width:28.5%;
	text-align:left;
}
.shopping_img image{
	width:80%;
	height:100%;

}
.edit_number{
	overflow:hidden;
	width:35%;
	font-size:22rpx;
	color:#999;
}
.changeColor text{
	color:#21c3d4;
}
.edit_number image{
	width:24rpx;
	height:21rpx;
	margin-left:10rpx;
}
.number{
	width:72rpx;
	text-align:center;
	color:#878787;
	border-right:solid 1px #e5e5e5; 
	}
.shopping_name{
	overflow:hidden;
	width:68.5%;
	text-align:left;
}
.shopping_name text{
	display:block;
	height:33.33%;
	align-items:center;
}
.shopping_name .text1{
	font-size:30rpx;
	color:#444;
	height:40%;
	
}
.shopping_name .text2{
	font-size:24rpx;
	color:#999;

}
.shopping_name .price{
	color:#21c3d4;
	font-size:28rpx;
}

.made_sort{
	width:27%;
	text-align:center;
	background:#fff;
	height:100vh;
}
.made_cont{
	width:66%;
	background:#fff;}
.madeSort{
	height:210rpx;}
.left_bar{
	width:100%;
	text-align:center;
}
.lsort_LeftAll{
	width:100%;
	height:88rpx;
	font-size:30rpx;
	color:#666;
}
.madeSort .img_bg{
	width:100%;
	height:88rpx;
	line-height:88rpx;

	color:#666;
	
	}
.madeSort .text2{
	font-size:22rpx;
	color:#999;
	height:60rpx;
	line-height:60rpx;
}
.small_sort{
	width:65%;
	margin:0rpx auto;
	border-top:solid 1px #666;
	}
.small_txt{
	width:80%;
	margin:0rpx auto;
}
.small_sort text{
	display:block;
}
.madeSort .text3{
	border-top:solid 1px #b1b1b1;
}
.made_bg .img_bg{background:linear-gradient(to right,rgba(72,222,223,1.00),rgba(42,154,225,1.00));}

.made_bg .active{color:#fff;}
.madeContItem{
	padding:0 3%;
	width:94%;
}
.madeShow{display:block}
.made_name{
	font-size:22rpx;
	color:#222;

}
.made_tlt{
	height:86rpx;
	line-height:86rpx;
	background:#f5f5f5;}
.made_tlt .made_name{
	color:#222;
	font-size:28rpx;
}
.made_tlt .made_more{
	font-size:24rpx;
	color:#a3a3a3;}
.made_case{
	border-radius:30rpx;
	padding:30rpx 21rpx;
	overflow:hidden;
}
.made_item{
	width:124rpx;
	height:auto;
	float:left;
	margin:0px 19rpx;
	text-align:center;
	margin-bottom:25rpx;
}
.made_item image{
	width:124rpx;
	height:124rpx;
}
.made_item .product_name{
	font-size:24rpx;
	color:#222;

}