.wrap {
    padding: 12rpx 26rpx;
}

.wrap-time {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 24rpx;
}

.time {
    font-size: 24rpx;
    color: #F7F7F7;
    background: #CFCFCF;
    border-radius: 8rpx;
    padding: 4rpx 12rpx;
}

.msg {
    display: flex;
    flex-direction: row;
}

.msg_align-left {
    justify-content: flex-start;
}

.msg_align-right {
    justify-content: flex-end;
}

.avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 6rpx;
    overflow: hidden;
}

.arrow {
    width: 0;
    height: 0;
    border: 10rpx solid;
    border-color: transparent;
    margin-top: 26rpx;
}

