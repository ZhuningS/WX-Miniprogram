}

.arrow_right {
}

.bubble {
    padding: 18rpx 20rpx;
    max-width: 500rpx;
    min-width: 20rpx;
    min-height: 80rpx;
    box-sizing: border-box;
    border-radius: 6rpx;
    word-break: break-all;
}

.msg_received {
}

.msg_sent {
}

.icon-status {
    width: 40rpx;
    height: 40rpx;
    margin: auto 10rpx;
}

.no-bubble {
}

.msg_align-left .no-bubble {
    margin-left: 10rpx;
}

.msg_align-right .no-bubble {
    margin-right: 10rpx;
}