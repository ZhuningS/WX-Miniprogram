.content {
    overflow: hidden;
    position: relative;
    border-radius: 8rpx;
    border: 1rpx solid rgba(0,0,0,0.1);
    display: flex;
}

.percentage {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    display: flex;
}

.percentage-inner {
    margin: auto;
    text-align: center;
}

.loading {
    width: 40rpx;
    height: 40rpx;
}

.percentage-text {
    color: #FFF;
    font-size: 24rpx;
}