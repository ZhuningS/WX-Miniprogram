.wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: transparent;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    height: 112rpx;
    overflow: hidden;
    box-sizing: border-box;
}

.wrapper.iPhoneX {
    margin-bottom: 70rpx!important;
}

.wrapper-pay-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 510rpx;
    background: #fff;
    color: #000;
    padding-left: 40rpx;
    padding-right: 30rpx;
    padding-top: 24rpx;
    padding-bottom: 18rpx;
}

.wrapper-pay-info .check-tip {
    font-size: 24rpx;
    color: #353535;
    margin-left: 14rpx;
    height: 40rpx;
    line-height: 40rpx;
    vertical-align: middle;
}

.wrapper-select-area {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 10rpx 30rpx 10rpx 0;
}

.pay-info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    flex: 1;
}

.pay-info-total {
    font-size: 24rpx;
    color: #353535;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.pay-info-total-money {
    font-family: WeChat Sans Std;
    font-weight: bold;
    font-size: 36rpx;
    color: #353535;
    text-align: right;
}

.pay-info-total-money.small-size {
    font-size: 28rpx;
}

.pay-info-extra {
    margin-top: 4rpx;
    font-size: 20rpx;
    color: #888;
}

.wrapper-express {
    font-size: 20rpx;
    color: #888;
}

.wrapper-pay-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #353535;
    color: #fff;
    width: 300rpx;
    height: 112rpx;
    line-height: 112rpx;
    font-size: 34rpx;
    font-weight: normal;
}

.wrapper-pay-btn.disable {
    background: #e7e7e7;
}

.select-icon {
    background-size: 40rpx 40rpx;
    width: 40rpx;
    height: 40rpx;
}