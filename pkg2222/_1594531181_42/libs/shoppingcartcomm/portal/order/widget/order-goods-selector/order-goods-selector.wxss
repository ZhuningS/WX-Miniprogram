.wrapper {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.btn {
    width: 78rpx;
    height: 72rpx;
    font-size: 32 rpx;
    line-height: 72rpx;
    text-align: center;
    box-sizing: border-box;
    border-width: 1px;
    border-style: solid;
    border-color: #6D6D6D;
}

.btn.btn-minus {
    border-radius: 3px 0 0 3px;
    background: center center no-repeat url('data:image/png;base64,');
    background-size: 28rpx auto;
}

.btn.btn-minus.disabled {
    background-image: url('data:image/png;base64,');
}

.btn.btn-add {
    border-radius: 0 3px 3px 0;
    background: center center no-repeat url('data:image/png;base64,');
    background-size: 28rpx auto;
}

.btn.btn-add.disabled {
    background-image: url('data:image/png;base64,');
}

.btn.disabled {
    border-color: #D8D8D8;
}

.count {
    width: 104rpx;
    text-align: center;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 32rpx;
}