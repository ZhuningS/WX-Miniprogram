.wrap {
    overflow: hidden;
}

.section {
    position: relative;
}

.section::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 16rpx;
    background: #F5F5F5;
}

.section.last::after {
    width: 0;
    height: 0;
}

.header {
    padding: 40rpx 0 16rpx 60rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #000;
    line-height: 44rpx;
    position: relative;
}

.header::after {
    content: "";
    position: absolute;
    left: 60rpx;
    bottom: 0;
    width: 100%;
    border-top: 1rpx solid #E5E5E5;
}

.row {
    padding: 40rpx 60rpx;
}

.row.no-padding {
    padding: 0;
}

.express-brief {
    padding: 40rpx 60rpx;
}

.express-brief .title {
    font-weight: bold;
    font-size: 28rpx;
    color: #000;
    line-height: 40rpx;
    margin-bottom: 16rpx;
}

.express-brief .desc {
    font-size: 28rpx;
    color: rgba(0,0,0,0.50);
    line-height: 44rpx;
}

.express-item {
}

.express-item-inner {
    padding: 40rpx 60rpx;
}

.express-item .title {
    font-weight: bold;
    font-size: 30rpx;
    color: #000;
    line-height: 42rpx;
    margin-bottom: 16rpx;
}

.express-item .wrap-desc {
    position: relative;
    display: flex;
    padding-right: 54rpx;
}

.express-item .icon-arrow-right {
    position: absolute;
    top: 9rpx;
    right: 0;
}

.express-item .desc {
    font-size: 28rpx;
    color: #353535;
    line-height: 44rpx;
}

.express-item .time {
    font-size: 24rpx;
    color: #171717;
    line-height: 44rpx;
    margin-bottom: 16rpx;
}

.express-item .pics {
    display: flex;
    flex-direction: row;
}

.express-item .pics .pic {
    width: 96rpx;
    height: 96rpx;
    margin-right: 8rpx;
}

.express-info__name {
    font-size: 28rpx;
    color: rgba(0,0,0,0.90);
    line-height: 52rpx;
}

.express-info__address {
    font-size: 28rpx;
    color: rgba(0,0,0,0.90);
    line-height: 52rpx;
    margin-top: 8rpx;
}

.shop-header {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.shop-header .logo {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
}

.shop-header .name {
    font-size: 28rpx;
    color: #000;
    margin-left: 16rpx;
    margin-right: 10rpx;
}

.icon-arrow-right {
    width: 14rpx;
    height: 26rpx;
}

.shop-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 34rpx 0;
}

.shop-item .thumb {
    width: 162rpx;
    height: 162rpx;
}

.shop-item .info {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
}

.shop-item .info .title {
    font-size: 28rpx;
    color: #000;
    margin-bottom: 20rpx;
}

.shop-item .info .desc {
    font-size: 26rpx;
    color: #B2B2B2;
    margin-bottom: 32rpx;
}

.shop-item .info .wrap-price {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.wrap-price .unit-price {
    font-family: WeChat Sans Std;
    font-weight: bold;
    font-size: 30rpx;
    color: #000;
    flex-grow: 1;
}

.wrap-price .quantity {
    font-size: 28rpx;
    color: #000;
}

.remarks {
    font-size: 28rpx;
    color: rgba(0,0,0,0.9);
    line-height: 52rpx;
}

.order-info {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    color: #888;
    margin-bottom: 32rpx;
}

.order-info.total {
    font-size: 30rpx;
    color: #000;
    margin-bottom: 0;
}

.order-info .content {
    flex-grow: 1;
    text-align: right;
}

.price {
    font-family: WeChat Sans Std;
    color: #353535;
}

.total-price {
    font-weight: bold;
    font-size: 36rpx;
    color: #000;
}

.line {
    margin-top: 8rpx;
    border-top: 1rpx solid #E5E5E5;
    margin-bottom: 28rpx;
    padding-left: 60rpx;
}

.dash-line {
    height: 1px;
    border-top: 0 dashed transparent;
    background: linear-gradient(transparent,transparent) padding-box,repeating-linear-gradient(90deg,#E5E5E5 0,#E5E5E5 6px,transparent 0,transparent 10px);
    margin-left: 60rpx;
}

.btn-contact {
    display: flex;
    background: #353535;
}

.btn-contact .text {
    margin: 32rpx auto;
    font-size: 34rpx;
    color: #FFF;
}