.wrap {
    background: #F7F7F7;
}

.mini-feature__wrap {
    background: white;
    margin: 0 0px;
}

.mini-feature {
    padding: 26px 0;
}

.mini-feature__rows {
    display: flex;
    margin-top: 10px;
}

.mini-feature__rows.between {
    margin-top: 20px;
}

.mini-feature__col {
    flex: 1;
    width: 50%;
}

.mini-feature__img {
    width: 56rpx;
    height: 56rpx;
    display: inline-block;
    margin: 8rpx 20rpx 0 60rpx;
    vertical-align: top;
    border-radius: 50%;
}

.mini-feature__text {
    display: inline-block;
    width: calc(100% - 136rpx);
}

.mini-feature__col.borderRight {
    border-right: 2rpx solid #F7F7F7;
}

.mini-feature__title {
    font-size: 30rpx;
}

.mini-feature__subTitle {
    font-size: 26rpx;
    color: #808080;
    margin-top: 10rpx;
}

.mini-feature__ft {
    position: relative;
    margin-left: 15px;
    line-height: 40px;
    font-size: 13px;
    color: #888888;
}

.mini-feature__ft:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 1px;
    border-top: 1px solid #DFDFDF;
    transform-origin: 0 0;
    transform: scaleY(0.5);
}

.mini-feature__ft-img {
    margin-right: 5px;
    height: 18px;
    width: 18px;
    vertical-align: middle;
}

.mini-feature__ft-text {
    vertical-align: middle;
    max-width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-wrap: break-word;
}

.mini-feature__seperator {
    width: 1px;
    height: 100%;
    background-color: #F7F7F7;
    display: inline-block;
}