@import "../../__wuBaseWxss__/2.wxss";

.article-wrap {
    padding: 40rpx 30rpx 40rpx 60rpx;
    height: 160rpx;
}

.article-line {
    padding-top: 0.5px;
}

.article-line:after {
    content: '';
    position: absolute;
    left: 60rpx;
    border-top: 1px solid #E5E5E5;
    width: calc(200% - 240rpx);
    height: 1px;
    transform-origin: 0 0;
    transform: scale(0.5,0.5);
    box-sizing: border-box;
}

.article-left {
    float: left;
    display: inline-block;
    width: 60%;
}

.article-title {
    font-size: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.article-date {
    font-size: 13px;
    color: #8c8c8c;
    margin-top: 15px;
}

.article-thumb {
    width: 190rpx;
    height: 140rpx;
    float: right;
}