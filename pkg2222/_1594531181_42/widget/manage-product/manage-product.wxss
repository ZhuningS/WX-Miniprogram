@import "../../__wuBaseWxss__/2.wxss";

.product-banner__wrap {
    width: 100%;
    overflow: hidden;
    position: relative;
}

.product-banner__img {
    width: 100%;
}

.product-banner__product-ctr {
    display: flex;
    flex-wrap: wrap;
    padding: 33rpx 48rpx 26rpx;
    justify-content: space-around;
}

.product-banner__product {
    display: table;
    border-collapse: separate;
    margin-top: 33rpx;
    margin-bottom: 36rpx;
    border-spacing: 6rpx 0;
    margin-left: 48rpx;
}

.product-banner__product.count-1 {
    margin-left: 260rpx;
}

.product-banner__product.count-2 {
    border-spacing: 10rpx 0px;
}

.product-banner__product-img {
    width: 312rpx;
    height: 200rpx;
    background: #F7F7F7;
    display: block;
}

.cover {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.65;
}

.product-banner__product-item {
    width: 312rpx;
    margin-bottom: 12px;
}

.product-banner__product-name {
    color: #888;
    font-size: 12px;
    margin-top: 24.5rpx;
    line-height: 16.8px;
    text-align: center;
}

.product-banner__product-date {
    font-size: 12px;
    text-align: center;
    color: #888;
    margin-top: 10rpx;
}