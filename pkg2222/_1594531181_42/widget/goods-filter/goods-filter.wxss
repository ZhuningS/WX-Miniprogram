@import "../../__wuBaseWxss__/2.wxss";

.wrap {
    width: 100%;
    height: auto;
    background: #FFF;
    position: fixed;
    left: 0;
    top: 64px;
    z-index: 2;
}

.wrap.android {
    top: 72px!important;
}

.wrap.iPhoneX {
    top: 88px!important;
}

.header {
    padding: 30rpx 50rpx;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.header::before {
    content: "";
    top: 0;
    left: 0;
    width: 100%;
    height: 1rpx;
    position: absolute;
    transform: scaleY(0.5);
    background: #E5E5E5;
}

.body {
    position: relative;
}

.scroll-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 70rpx;
    height: 100rpx;
}

.scroll-item__title {
    flex: 1;
    color: #000;
    font-size: 30rpx;
    line-height: 40rpx;
    height: 40rpx;
}

.scroll-item__subtitle {
    color: #888;
    font-size: 28rpx;
    line-height: 40rpx;
    height: 40rpx;
}

.line {
    border-top: 1rpx solid #e5e5e5;
    margin-left: 60rpx;
}

.mask {
    background: #000;
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 1000px;
    z-index: -1;
}

.scroll-wrap {
    background-color: #fff;
    height: 0;
}

filter-item {
    flex: 1;
    overflow: hidden;
}