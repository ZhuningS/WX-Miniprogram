.wrap {
    display: flex;
}

.head {
    margin: 0 auto;
    padding: 10rpx 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.head-align__left {
    justify-content: flex-start;
    margin-left: 0;
}

.head-align__right {
    justify-content: flex-end;
    margin-right: 0;
}

.filter-item__text {
    color: #888;
    font-size: 28rpx;
    line-height: 40rpx;
    height: 40rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.highlight {
    color: #000;
}

.filter-item__wrapper-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 10rpx;
}

.filter-item__icon-up {
    width: 19rpx;
    height: 12rpx;
    margin-bottom: 4rpx;
}

.filter-item__icon-down {
    width: 19rpx;
    height: 12rpx;
}