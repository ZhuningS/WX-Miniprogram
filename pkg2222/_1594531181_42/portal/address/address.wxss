.address-wrap {
    width: 100%;
    background: #FFF;
    font-family: PingFangSC-Regular;
}

.brand-header {
    background: #F7F7F7;
    padding: 62rpx 58rpx 54rpx 60rpx;
    display: flex;
    flex-direction: row;
    align-items: top;
}

.brand-logo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.brand-info-wrap {
    position: relative;
    max-width: 512rpx;
    height: 100%;
    padding-left: 40rpx;
    padding-top: 12rpx;
    display: flex;
    flex-direction: column;
    align-items: left;
}

.brand-name {
    margin-top: 8rpx;
    margin-bottom: 26rpx;
    color: #000;
    font-size: 18px;
    font-family: SFUIDisplay-Medium;
}

.brand-desc {
    max-width: 472rpx;
    font-size: 13px;
    color: #888;
    line-height: 40rpx;
    margin-top: 24rpx;
}

.brand-contact {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.brand-contact__icon {
    width: 36rpx;
    height: 32rpx;
}

.brand-contact__text {
    font-size: 15px;
    color: #353535;
}

.brand-contact__arrow-right {
    width: 14.2rpx;
    height: 26rpx;
    margin-left: 8rpx;
}

.brand-contact__btn {
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.goto-setting {
    padding: 30rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.goto-setting-tips {
    font-size: 15px;
    color: #888;
}

.goto-setting-btn {
    font-size: 14px;
    color: #5b6b92;
    margin-top: 14rpx;
    padding: 0;
    background: transparent;
}

.goto-setting-btn::after {
    border: 0;
}