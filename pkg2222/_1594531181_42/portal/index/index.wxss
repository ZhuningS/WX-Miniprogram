@import "../../__wuBaseWxss__/3.wxss";

.index-shoppingcar {
    position: fixed;
    width: 44px;
    height: 44px;
    bottom: 25px;
    right: 15px;
    text-align: center;
    border: 1px solid #EFEFEF;
    border-radius: 22px;
    background-color: #FFFFFF;
}

.index-shoppingcar.iPhoneX {
    bottom: 73px;
}

.index-shoppingcar__img {
    width: 27px;
    height: 27px;
    margin-top: 8.5px;
    margin-left: auto;
    margin-right: auto;
}

.container {
    position: relative;
    padding-bottom: 116rpx;
}

.container.iPhoneX {
    padding-bottom: 136rpx;
}

.bottom-area__show-all {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 116rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.bottom-area__show-all.iPhoneX {
    padding-bottom: 20rpx;
}

.bottom-area__show-all::before {
    content: "";
    width: 100%;
    border-top: 0.5rpx solid #E5E5E5;
}

.bottom-area__show-all::after {
    content: "";
}

.bottom-area__show-all:active {
    background-color: rgba(0,0,0,0.1);
}

.bottom-area__inner {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.bottom-area__show-all-text {
    font-size: 14px;
    color: #353535;
}

.bottom-area__show-all-img {
    width: 14.2rpx;
    height: 26rpx;
    margin-left: 14rpx;
}

.no-added-goods-footer {
    margin-top: 20rpx;
    text-align: center;
    font-size: 16px;
    color: #8C8C8C;
}