.wrap {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    position: relative;
}

.line-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 48.7%;
    padding-top: 76rpx;
    padding-bottom: 64rpx;
    position: relative;
}

.line-item-text {
    font-size: 14px;
    color: #171717;
    line-height: 32rpx;
    margin-bottom: 8rpx;
}

.line-item-text-separator {
    width: 72rpx;
    height: 2rpx;
    margin-top: 26rpx;
    margin-bottom: 16rpx;
    background: #D8D8D8;
}

.line-item-img {
    width: 286rpx;
    height: 186rpx;
    margin-top: 34rpx;
}

.line-item-action {
    margin-top: 20rpx;
    width: 80px;
    height: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(80,159,201,0.10);
    border-radius: 2px;
}

.line-item-action-text {
    font-size: 12px;
    color: #509FC9;
    letter-spacing: 0.19px;
    text-align: center;
    line-height: 24px;
    height: 24px;
}

.line-item-active-mask {
    background-color: transparent;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.line-item-active-mask:active {
    background-color: #000;
    opacity: 0.1;
}