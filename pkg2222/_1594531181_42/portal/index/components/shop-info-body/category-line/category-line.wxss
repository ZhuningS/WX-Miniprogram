.wrap {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 44rpx 15rpx 36rpx 15rpx;
    position: relative;
}

.category-item-text {
    font-size: 12px;
    color: #353535;
}

.category-item-img {
    width: 200rpx;
    height: 148rpx;
}

.category-item-text-img-separator {
    margin-top: 10rpx;
    margin-bottom: 16rpx;
    width: 72rpx;
    height: 2rpx;
    background: #D8D8D8;
}

.line-item-active-mask {
    background-color: transparent;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.line-item-active-mask:active {
    background-color: #000;
    opacity: 0.1;
}