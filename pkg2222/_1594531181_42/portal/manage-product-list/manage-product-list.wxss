.wrapper-header {
    width: 750rpx;
    overflow: hidden;
    background: white;
}

.header-img {
    width: 750rpx;
    z-index: 0;
    display: inline-block;
    top: 0px;
    left: 0px;
    position: absolute;
    width: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    transform-origin: 50% 0;
}

.wrapper-body {
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #FFF;
}

.body-title {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #000;
    margin: 60rpx 0 24rpx 0;
}

.line {
    margin-left: 60rpx;
    width: 650rpx;
    height: 0;
    border-top: 1rpx solid #E5E5E5;
}

.body-publish-date {
    margin: 34rpx 0 44rpx 0;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #B2B2B2;
}

.footer {
    background: #F7F7F7;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 86rpx 0 70rpx 0;
}

.footer-btn {
    width: 230rpx;
    height: 72rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #505050;
    text-align: center;
    line-height: 72rpx;
    border: 1rpx solid #5C5C5C;
}

.wrapper-header-text {
    padding: 46rpx 0 48rpx 0;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.wrapper-header-text__topic {
    font-size: 34rpx;
    color: #000;
    line-height: 40rpx;
}

.wrapper-header-text__time {
    font-size: 26rpx;
    color: #AAA;
    margin-top: 18rpx;
}

.fake-canvas {
    width: 4px;
    height: 4px;
    position: fixed;
    top: -4px;
    left: -100%;
}

.header-banner__hjGradient {
    width: 100%;
    height: 80px;
    position: absolute;
    top: 0;
}

.background-view {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: -1;
    top: 0;
}

.scroll-view {
    z-index: 1;
}

.header-banner__expand {
    height: 75px;
    background: #F7F7F7;
    margin-top: -5px;
}

.header-banner__expand-title {
    font-size: 24px;
    color: #FFFFFF;
    text-align: center;
    font-weight: medium;
    padding-top: 40rpx;
}

.header-banner__hjGradient-bottom {
    width: 100%;
    height: 40px;
    position: absolute;
    bottom: 0px;
}

.fake-canvas2 {
    width: 100%;
    height: 30px;
    position: fixed;
    top: -30px;
    left: 100%;
}