.wrapper {
    width: 750rpx;
    overflow: hidden;
}

.wrapper-header {
    width: 750rpx;
    height: auto;
    overflow: hidden;
    background: white;
}

.header-img {
    z-index: 0;
    display: inline-block;
    margin-left: 40rpx;
    margin-top: 42rpx;
    width: calc(100% - 80rpx);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    transform-origin: 50% 0;
}

.wrapper-body {
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #FFF;
    padding-bottom: 28rpx;
}

.body-title {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #000;
    margin: 60rpx 0 24rpx 0;
}

.line {
    margin-left: 60rpx;
    width: 650rpx;
    height: 0;
    border-top: 1rpx solid #E5E5E5;
}

.body-publish-date {
    margin: 34rpx 0 44rpx 0;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #B2B2B2;
}

.footer {
    background: #F7F7F7;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 86rpx 0 70rpx 0;
}

.footer-btn {
    width: 230rpx;
    height: 72rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #505050;
    text-align: center;
    line-height: 72rpx;
    border: 1rpx solid #5C5C5C;
}

.wrapper-header-text {
    padding: 60rpx 0 48rpx 0;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.wrapper-header-text__topic {
    font-size: 34rpx;
    color: #000;
    line-height: 40rpx;
}

.wrapper-header-text__time {
    font-size: 26rpx;
    color: #AAA;
    margin-top: 26rpx;
}

.fake-canvas {
    width: 4px;
    height: 4px;
    position: fixed;
    top: -4px;
    left: -100%;
}

.header-banner__hjGradient {
    width: 100%;
    height: 80px;
    position: absolute;
    top: 0;
}

.background-view {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: -1;
    top: 0;
}

.scroll-view {
    z-index: 1;
}

.manage-product__text {
    font-size: 14px;
    color: #AAAAAA;
    text-align: center;
    line-height: 22.4px;
    margin: 24rpx 40rpx 48rpx;
}

.manage-product__img {
    margin: 32rpx 40rpx 0rpx;
    width: calc(100% - 80rpx);
    background: #F7F7F7;
    display: block;
}

.header-banner__expand {
    background: #FFFFFF;
    padding-top: 40rpx;
    padding-bottom: 60rpx;
}

.header-banner__expand-title {
    font-size: 17px;
    color: #353535;
    text-align: center;
    line-height: 22.4px;
    font-weight: bold;
    margin-bottom: 24rpx;
}

.header-banner__hjGradient-bottom {
    width: 100%;
    height: 40px;
    position: absolute;
    bottom: 0px;
}

.fake-canvas2 {
    width: 100%;
    height: 30px;
    position: fixed;
    top: -30px;
    left: 100%;
}

.manage-product__desc {
    padding: 0rpx 40rpx 0rpx;
    font-size: 15px;
    color: rgba(0,0,0,0.5);
    line-height: 25px;
    background: #FFFFFF;
    word-break: break-all;
}

.manage-product__area-title {
    font-size: 16px;
    line-height: 22px;
    padding: 60rpx 40rpx 12rpx;
    font-weight: bold;
}

.detail-param {
    padding: 0 40rpx;
}

.detail-param__attr {
    font-size: 14px;
    display: table;
    padding: 28rpx 0;
}

.detail-param__attr_fix {
    margin-top: 12rpx;
}

.detail-param__attr_border {
    padding: 1rpx;
    border-top: 1rpx dashed transparent;
    background: linear-gradient(white,white) padding-box,repeating-linear-gradient(-45deg,#ECECEC 0,#ECECEC 3px,white 0,white 8px);
}

.detail-param__attrname {
    color: #A5A5A5;
    width: 90px;
    display: table-cell;
    padding-right: 32px;
}

.detail-param__attrvalue {
    display: table-cell;
    word-break: break-all;
}

.header-banner__expand-subTitle {
    text-align: center;
}

.header-banner__expand-subTitle-text {
    font-size: 14px;
    color: #B2B2B2;
    text-align: center;
    display: inline-block;
}

.header-banner__expand-subTitle-border {
    width: 16px;
    margin: 0 16rpx;
    background: #D8D8D8;
    display: inline-block;
    height: 2rpx;
    vertical-align: middle;
}