page {
    background: #f7f7f7;
    position: relative;
    min-height: 100%;
}

page .container {
    display: flex;
    flex-direction: column;
    padding-bottom: 64rpx;
}

page .container .header {
    font-size: 32rpx;
    box-sizing: border-box;
    padding: 16rpx;
    color: #333;
}

page .container .simply .section {
    background: #fff;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #e5e5e5;
}

page .container .simply .section:last-child {
    border: none;
}

page .container .simply .section .item {
    box-sizing: border-box;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 30rpx;
    position: relative;
    font-size: 34rpx;
}

page .container .simply .section .item:before {
    content: " ";
    position: absolute;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    left: 30rpx;
    z-index: 2;
}

page .container .simply .section .item.checked:after {
    content: " ";
    position: absolute;
    right: 0;
    width: 30rpx;
    height: 90rpx;
    margin-right: 30rpx;
    background: url('data:image/png;base64,') no-repeat right center;
    background-size: 32rpx auto;
}

page .container .simply .section .item.with-arrow {
    background: url('data:image/png;base64,') no-repeat right center;
    background-size: 16rpx auto;
    margin-right: 30rpx;
}

page .container .simply .section .item.with-arrow:before {
    border: none;
}

page .container .complex .title {
    font-size: 24rpx;
    color: #888;
    padding: 16rpx 30rpx;
}

page .container .complex .item {
    background: rgba(255,0,0,0.1);
    background: #fff;
    width: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 32rpx;
}

page .container .complex .item .row {
    display: flex;
    flex-direction: row;
    height: 54rpx;
}

page .container .complex .item .row .label {
    width: 6em;
    font-size: 32rpx;
    color: #999;
    line-height: 54rpx;
}

page .container .complex .item .row .info {
    flex: 1;
    font-size: 30rpx;
    text-align: right;
    line-height: 54rpx;
}

page .container .complex .item textarea {
    font-size: 28rpx;
    color: #888;
    height: 260rpx;
    width: 100%;
}

page .container .complex .item .content-length {
    font-size: 28rpx;
    color: #888;
    text-align: right;
    padding-top: 28rpx;
    padding-bottom: 28rpx;
    border-bottom: 1px solid #e5e5e5;
}

page .container .complex .item .imgs {
    height: auto;
    width: 100%;
}

page .container .complex .item .imgs.hover {
    opacity: 0.5;
}

page .container .complex .item .imgs .status {
    display: flex;
    flex-direction: row;
    padding-top: 32rpx;
    padding-bottom: 32rpx;
}

page .container .complex .item .imgs .status .title {
    color: #888;
    font-size: 28rpx;
    padding: 0;
}

page .container .complex .item .imgs .status .counter {
    color: #888;
    font-size: 28rpx;
    padding: 0;
    flex: 1;
    text-align: right;
}

page .container .complex .item .imgs .imgs-previews {
    display: flex;
    flex-direction: row;
}

page .container .complex .item .imgs .imgs-previews .btn-add-img,page .container .complex .item .imgs .imgs-previews .img {
    margin-right: 20rpx;
    width: 128rpx;
    height: 128rpx;
    box-sizing: border-box;
    border: 1px solid #e5e5e5;
}

page .container .complex .item .imgs .imgs-previews .btn-add-img image,page .container .complex .item .imgs .imgs-previews .img image {
    width: 100%;
    height: 100%;
}

page .container .complex .item .imgs .imgs-previews .btn-add-img.hover,page .container .complex .item .imgs .imgs-previews .img.hover {
    opacity: 0.5;
}

page button {
    font-size: 36rpx;
    margin: 30rpx;
}

.report-success-container {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    z-index: 9999;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100rpx;
    padding-left: 32rpx;
    padding-right: 32rpx;
}

.report-success-container .tips {
    font-size: 32rpx;
    color: #171717;
    margin-top: 40rpx;
}

.report-success-container button {
    width: 100%;
    font-size: 32rpx;
    margin: 40rpx;
}

.image-viewer {
    position: absolute;
    height: 100%;
    width: 100%;
    z-index: 999;
    background: #000;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.image-viewer .img {
    width: 100%;
    flex: 1;
}

.image-viewer .btn-delete {
    height: 120rpx;
    background: #000;
    display: flex;
    justify-content: center;
    align-items: center;
}

.image-viewer .btn-delete.hover {
    opacity: 0.5;
}

.image-viewer .btn-delete image {
    width: 44rpx;
    height: 44rpx;
}