.wrapper {
    width: 100%;
    height: auto;
}

.wrapper .wrapper-mch-info {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
}

.wrapper .wrapper-mch-info.hover {
    opacity: 0.5;
}

.wrapper .wrapper-mch-info::after {
    position: absolute;
    content: "";
    left: 30rpx;
    bottom: 0;
    width: 100%;
    height: auto;
    border-bottom: 1rpx solid #ececec;
}

.wrapper .wrapper-mch-info .wrapper-header {
    width: 100%;
    padding-top: 36rpx;
    padding-bottom: 28rpx;
    padding-left: 114.5rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.wrapper .wrapper-mch-info .mch-logo {
    width: 48rpx;
    height: 48rpx;
    border-radius: 48rpx;
    background: #eee;
    margin-right: 16rpx;
    display: block;
}

.wrapper .wrapper-mch-info .mch-name {
    height: 48rpx;
    flex: 1;
    font-size: 26rpx;
    color: #353535;
    line-height: 48rpx;
}

.wrapper .wrapper-mch-info .date-time {
    flex-shrink: 0;
    height: 48rpx;
    text-align: right;
    box-sizing: border-box;
    margin-right: 32rpx;
    font-size: 26rpx;
    line-height: 48rpx;
    color: #888;
}

.wrapper .wrapper-mch-info .wrapper-select-area {
    position: absolute;
    left: 0;
    width: 125rpx;
    height: auto;
    padding: 28rpx 0 20rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    top: 50%;
    transform: translate(0,-50%);
}

.wrapper .wrapper-mch-info .wrapper-select-area image {
    background-size: 40rpx auto;
    width: 40rpx;
    height: 40rpx;
}