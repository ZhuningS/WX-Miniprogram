@import "../../../__wuBaseWxss__/15.wxss";

.iconfont {
    font-size: inherit;
    display: inline-block;
    vertical-align: bottom;
}

@import "../../../__wuBaseWxss__/3.wxss";

.swiper {
    width: 100%;
    position: relative;
    padding-bottom: 60%;
}

.swiper swiper {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.swiper image {
    width: 100%;
    height: 100%;
}

.count-down {
    position: absolute;
    bottom: 0;
    background: #f66;
    padding: 20rpx;
    width: 100%;
    color: #fff;
}

.count-down .time {
    background: #fff;
    color: #f66;
    margin: 0 8rpx;
    padding: 3rpx 6rpx;
    border-radius: 6rpx;
}

.gd-info {
    background: #fff;
    padding: 10px;
}

.share-btn {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-right: -10px;
    font-size: 40rpx;
    color: #666;
    background: transparent;
    border-radius: 50%;
    transition: all .2s linear;
}

.share-btn:active {
    background: #f5f5f5;
    border-radius: 0;
    transition: all .2s linear;
}

.activity-item {
    background: #fff;
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
}

.activity-item .tips-font {
    font-size: 0.8em;
}

.rebate-desc {
    width: 80rpx;
    text-align: center;
    color: #999;
}

.gd-tags,.gd-tags-item {
    display: inline-block;
}

.gd-tags-item {
    color: #fff;
    padding: 1px 6px;
    border-radius: 3px;
}

.gd-tags {
    transform: scale(.8);
    transform-origin: center top;
}

.gd-o-team {
    background: #fff;
}

.gd-o-tit {
    padding: 20rpx;
}

.right-more {
    padding-right: 26rpx;
}

.gd-o-avatar,.gd-o-avatar image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
}

.gd-o-btn button {
    line-height: 28px;
    padding: 0 12px;
    font-size: 12px;
    border-radius: 6rpx;
    vertical-align: bottom;
}

.gd-o-item {
    padding: 20rpx;
    align-items: center;
}

.gd-o-item.gridXt::before {
    left: 20rpx;
}

.gd-o-item .sub,.gd-o-name {
    padding: 4px 0;
    line-height: 16px;
}

.gd-o-name {
    overflow: hidden;
}

.popup-pintuan {
    z-index: 2;
}

.pintuan-content {
    width: 660rpx;
    padding: 30rpx;
    background: #fff;
    z-index: 1;
    border-radius: 14rpx;
}

.gd-o-list {
    max-height: 600rpx;
    overflow: auto;
    -webkit-overflow-scrolling: touch;
}

.floatBox .close {
    color: #fff;
    width: 76rpx;
    height: 76rpx;
    line-height: 76rpx;
    text-align: center;
    font-size: 48rpx;
    position: absolute;
    bottom: -150rpx;
    border: 1px solid currentColor;
    border-radius: 50%;
    left: 50%;
    transform: translateX(-50%);
}

.floatBox .close:active {
    background: rgba(255,255,255,0.2);
}

.floatBox .close::before {
    content: '';
    display: block;
    width: 1px;
    height: 80rpx;
    background: currentColor;
    position: absolute;
    top: -80rpx;
    left: 50%;
    transform: translateX(-50%);
}

.pt-play {
    background: #fff;
    padding: 10px;
}

.pt-play .iconfont {
    font-size: 28px;
    padding: 15px 0 10px;
    display: block;
}

.pt-item {
    line-height: 140%;
    padding: 0 5px;
}

.gd-desc {
    background: #fff;
    padding: 10px;
}

.gd-desc-tit {
    padding-bottom: 10px;
}

.gd-desc-box {
    line-height: 160%;
    max-width: 100%!important;
}

.gd-desc-box view {
    max-width: 100%!important;
    width: auto!important;
}

.gd-desc-box image {
    width: 100%;
    display: block;
    margin: 0 0;
}

.group-nav {
    height: 46px;
}

.group-f {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 46px;
    width: 100%;
    background: #fff;
    z-index: 1;
}

.group-f:before {
    background: rgba(0,0,0,.1);
}

.group-f .iconfont {
    font-size: 40rpx;
}

.back-home {
    padding: 6px 20px;
    line-height: 150%;
    position: relative;
}

.back-home button {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

.o-buy,.t-buy {
    display: block;
    padding: 6px 0;
    line-height: 17px;
    color: #fff;
}

.add-cart-box {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,.8);
    z-index: 2;
}

.layout {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #fff;
}

.layout-info {
    padding: 10px;
    line-height: 30px;
}

.layout-info image {
    width: 66px;
    height: 66px;
    margin-top: -26px;
    border: 2px solid #fff;
}

.layout-info .sub {
    line-height: 23px;
    overflow: hidden;
}

.options {
    padding: 0 10px;
}

.g-lineText {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 23px;
}

.options-item {
    padding: 15px 0 9px;
    overflow: hidden;
}

.count-set {
    width: auto;
    border: 1px solid #eee;
    margin-bottom: 6px;
}

.count-set text {
    display: block;
    line-height: 30px;
    padding: 0 15px;
}

.count-set .number {
    width: 60px;
}

.buy-couts {
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    height: 30px;
}

.count-set .flase {
    background: rgba(0,0,0,.05);
    color: #999;
}

.add-cart-btn {
    color: #fff;
    border-radius: 0;
}

.add-cart-close {
    position: absolute;
    right: 10px;
    top: -50px;
    border: 1px solid #fff;
    color: #fff;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: block;
    line-height: 40px;
    text-align: center;
    font-size: 28px;
    transform: scale(.8);
}

.options-ss {
    padding: 3px 8px;
    border-radius: 3px;
    display: inline-block;
    margin-right: 6px;
    margin-bottom: 6px;
}

.options-ss:before {
    border-color: rgba(0,0,0,.1);
}

.options-ss.active {
    color: #fff;
}

.gd-desc-item {
    padding: 30rpx 0;
}

.desc-user-img {
    width: 60rpx;
    height: 60rpx;
}

.desc-user-img image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.desc-content-img image {
    width: 200rpx;
    height: 200rpx;
    float: left;
    margin: 0;
    margin-top: 10rpx;
    margin-right: 10rpx;
}

.desc-content-img image:nth-child(3n+3) {
    margin-right: 0;
}

.help {
    font-size: 48rpx;
}