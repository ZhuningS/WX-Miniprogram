@import "../../../__wuBaseWxss__/3.wxss";

@import "../../../__wuBaseWxss__/15.wxss";

page {
    font-size: 32rpx;
}

.distribut-item {
    display: flex;
    background: #fff;
    padding: 20rpx 30rpx;
    justify-content: space-between;
    align-items: center;
}

.mallsure-title {
    background: #fff;
    padding: 10px;
}

.sure-item {
    padding: 15px 10px;
    background: #fff;
    margin-top: 5px;
}

.sure-img {
    width: 60px;
    height: 60px;
    display: block;
    margin-right: 8px;
}

.sure-title {
    line-height: 140%;
    display: block;
}

.message-input {
    position: absolute;
    top: -15px;
    bottom: -15px;
    width: 100%;
    height: auto;
}

.mallcart-float {
    height: 46px;
}

.mallcart-foot {
    position: fixed;
    z-index: 999;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 46px;
    line-height: 46px;
    background: #fff;
}

.mall-cart-btn {
    display: block;
    color: #fff;
    padding: 0 30px;
    border-radius: 0;
}

.mall-cart-btn::after {
    border-radius: 0;
    border: 0;
}

.pssel {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.8);
    z-index: 999;
}

.psselbox {
    position: absolute;
    left: 0;
    width: 100%;
    bottom: 0;
    background: #fff;
}

.icon-close {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 1px solid #ccc;
    line-height: 24px;
    text-align: center;
}

.psseltit {
    padding: 15px 10px;
    height: 56px;
}

.psselitem {
    padding: 10px;
    min-height: 44px;
}

.psselicon {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 1px solid #ccc;
    line-height: 24px;
    text-align: center;
    color: rgba(0,0,0,0);
}

.psselicon.active {
    color: #fff;
    border: none;
}

.add-address-btn {
    color: #fff;
    border-radius: 0;
    text-align: center;
    padding: 10px 0;
}