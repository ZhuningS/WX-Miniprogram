@import "../../../__wuBaseWxss__/6.wxss";

.iconfont {
    font-size: inherit;
}

.bgwhite {
    background: #fff;
}

.top_title {
    line-height: 92rpx;
}

.top-title-tab.gridYr::before {
    transform: scale(0.5);
}

.top-title-tab.new-news::after {
    content: '';
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
    background: #f66;
    border-radius: 50%;
    margin-top: -20rpx;
}

.co-title {
    padding: 20rpx 30rpx;
}

.comment {
    padding: 0 30rpx;
    line-height: 1.5;
    color: #444;
    word-break: break-all;
}

.co-item {
    padding: 30rpx 0;
}

.co-userimg {
    width: 80rpx;
    height: 80rpx;
}

.co-userimg image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.co-caozuo {
    padding: 10rpx 20rpx;
    font-size: 32rpx;
}

.co-answerb {
    background: #f8f8f8;
    padding: 10rpx 30rpx;
    border-radius: 12rpx;
}

.pinglun-input {
    background: #eee;
    padding: 20rpx 30rpx;
    width: 100%;
    position: absolute;
    bottom: 0;
    z-index: 2;
}

.pinglun-input .close {
    font-size: 48rpx;
    align-self: center;
    width: 48rpx;
}

.pinglun-input .close:active {
    border-radius: 50%;
    background: rgba(0,0,0,0.05);
}

.pinglun-input textarea {
    width: 100%;
    border: 1rpx solid #ddd;
    background: #fff;
    padding: 20rpx;
}

.send-btn {
    width: 200rpx;
}

.pup-content {
    line-height: 88rpx;
    border-radius: 3px;
    z-index: 2;
    width: 80%;
}

.pup-content .pop-item:active,.pup-btn>view:active {
    background: rgba(0,0,0,0.05);
}

.pup-content .pop-item:last-child.gridXb::before {
    display: none;
}

radio-group .wx-radio-input {
    border-radius: 50%;
    transform: scale(0.8);
}

radio-group .wx-radio-input.wx-radio-input-checked {
    background: transparent!important;
}

radio-group .wx-radio-input.wx-radio-input-checked::before {
    content: '';
    width: 60%;
    height: 60%;
    background: #09bb07;
    border-color: #09bb07;
    border-radius: 50%;
}