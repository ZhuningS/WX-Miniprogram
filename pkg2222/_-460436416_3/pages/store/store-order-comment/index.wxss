.zan-active {
    color: var(--DStore-mcolor);
}

.zan-active .iconfont {
    font-size: 36rpx;
}

.zan-active .iconfont::before {
    color: inherit;
}

.zanActive .iconfont {
    animation: zan .8s forwards;
}

@-webkit-keyframes zan {
    0% {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.4) rotate(-45deg);
        opacity: .8;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}

@keyframes zan {
    0% {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.4) rotate(-45deg);
        opacity: .8;
    }

    100% {
        transform: scale(1);
        opacity: 1;
    }
}

