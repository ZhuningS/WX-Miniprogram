.upload-img {
    padding: 30rpx 0;
    overflow: hidden;
}

.upload-img .item {
    width: 116rpx;
    height: 116rpx;
    margin-top: 16rpx;
    float: left;
    margin-right: 16rpx;
    position: relative;
}

.upload-img .item image {
    width: 100%;
    height: 100%;
}

.upload-img .item:nth-child(5n) {
    margin-right: 0;
}

.upload-img .item.add {
    border: 1px solid #ccc;
    position: relative;
}

.upload-img .item.add::after,.upload-img .item.add::before {
    content: "";
    width: 50%;
    height: 4px;
    border-radius: 2px;
    display: block;
    position: absolute;
    background: #ccc;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.upload-img .item-del {
    position: absolute;
    bottom: 0px;
    left: 0;
    color: #fff;
    background: rgba(0,0,0,0.8);
    width: 100%;
    height: 20rpx;
    line-height: 24rpx;
    text-align: center;
    z-index: 2;
}

.upload-img .item-del::before {
    width: 30rpx;
    height: 30rpx;
    background: #f00;
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
}

.upload-img .item.add::after {
    transform: translate(-50%,-50%) rotate(90deg);
}

