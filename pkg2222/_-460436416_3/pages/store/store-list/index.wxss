@import "../../../__wuBaseWxss__/8.wxss";

.no-content-img {
    width: 50%;
}

.top-nav-box {
    height: 92rpx;
}

.top-nav {
    background: #fff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
}

.top-nav-item {
    line-height: 92rpx;
    white-space: nowrap;
    padding: 0 20rpx;
}

.top-nav-item::before {
    top: 20%;
    bottom: 20%;
}

.top-nav-item.active {
    color: var(--DStore-mcolor);
}

.top-nav-item.active::after {
    border-bottom-color: currentColor;
    transform: rotate(180deg);
}

.fenlei-nav {
    max-width: 60%;
    min-width: 40%;
}

.fenlei-nav::after {
    content: '';
    display: inline-block;
    border-bottom: 6px solid #aaa;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    margin-left: 3px;
    vertical-align: middle;
    transition: all 0.3s linear;
}

.top-nav-item .fenlei-name {
    max-width: 80%;
    display: inline-block;
    vertical-align: middle;
}

.menu-select-box,.screen-box {
    position: fixed;
    top: 92rpx;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
}

.floatBoxBg {
    width: 100%;
    height: 100%;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    animation: fadeIn 0.2s 0.1s linear forwards;
}

.menu-select,.top-screen {
    max-height: 800rpx;
    background: #fff;
    position: relative;
    z-index: 1;
    transform: translateY(-100%);
    padding: 20rpx 0;
    font-size: 30rpx;
    animation: fadeInDown 0.3s 0.4s linear forwards;
}

.top-screen {
    animation: fadeInDown 0.18s 0.3s linear forwards;
}

.menu-name {
    width: 300rpx;
    background: #fff;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.menu-detail.sub {
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.menu-item {
    padding: 25rpx 30rpx 25rpx 40rpx;
    line-height: 1.4;
}

.menu-item.active {
    color: var(--DStore-mcolor);
    font-weight: bold;
    position: relative;
}

.menu-name .menu-item.active::after {
    content: '';
}

.menu-item:active {
    background: rgba(0,0,0,0.05);
}

.top-screen .menu-item.active .iconfont {
    font-size: 40rpx;
}

.fadeInUp {
    animation: fadeInUp 0.2s linear forwards;
}

@-webkit-keyframes fadeInDown {
    0% {
        transform: translateY(-100%);
    }

    100% {
        transform: translateY(0);
    }
}

@keyframes fadeInDown {
    0% {
        transform: translateY(-100%);
    }

    100% {
        transform: translateY(0);
    }
}

@-webkit-keyframes fadeInUp {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(-100%);
    }
}

@keyframes fadeInUp {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(-100%);
    }
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.shop-list {
    padding: 30rpx;
    background: var(--white);
}

.shop-list:active {
    background: rgba(0,0,0,0.05);
}

.shop-list-img {
    width: 200rpx;
    height: 150rpx;
}

.shop-title {
    font-weight: bold;
    display: inline-block;
    max-width: 260rpx;
    vertical-align: bottom;
}

.shop-adress {
    line-height: 1;
}

.many-shop .shop-tag {
    height: 56rpx;
    overflow: hidden;
}

.shop-activity-box {
    display: inline-block;
    vertical-align: bottom;
    line-height: 1.4;
}

.shop-activity {
    display: inline-block;
    font-size: 10px;
    width: 17px;
    height: 17px;
    line-height: 17px;
    color: #fff;
    background: #f66;
    text-align: center;
    border-radius: 6rpx;
    margin-right: 10rpx;
    vertical-align: top;
}

.shop-activity.jian {
    background: #ffa766;
}