@import "../../../__wuBaseWxss__/8.wxss";

.toggle-btn {
    line-height: 66rpx;
    padding: 0 40rpx;
    border: 1px solid var(--white);
}

.toggle-btn.active {
    background: var(--white);
    color: var(--DStore-mcolor);
    border: none;
}

.toggle-btn:first-child {
    border-right: none;
    border-radius: 40rpx 0 0 40rpx;
}

.toggle-btn:last-child {
    border-left: none;
    border-radius: 0 40rpx 40rpx 0;
}

.ui-navbar-active {
    color: var(--DStore-mcolor);
    font-weight: bold;
    overflow-y: visible;
}

.ui-navbar {
    position: relative;
}

.ui-navbar::before {
    content: '';
    display: block;
    height: 4rpx;
    position: absolute;
    left: 0;
    right: 0;
    bottom: -30rpx;
    background: var(--DStore-mcolor);
    left: -30rpx;
    right: -30rpx;
    margin: auto;
    opacity: 0;
}

.ui-navbar-active::before {
    left: 0;
    right: 0;
    opacity: 1;
    transition: all .3s linear;
}

.shop-msg {
    padding: 20rpx 30rpx;
}

.shop-logo {
    width: 80rpx;
    height: 80rpx;
}

.goods-list {
    background: #fcfcfc;
    padding: 20rpx 30rpx;
    line-height: 1.3;
}

.goods-list:nth-child(n+2) {
    margin-top: 10rpx;
}

.goods-img {
    width: 120rpx;
    height: 120rpx;
}

.msg-bottom {
    align-items: flex-end;
}

.order-more {
    height: 60rpx;
    position: relative;
}

.order-more::before {
    left: calc(50% - 3px);
}

.order-total {
    padding: 20rpx 30rpx;
}

.order-btn button {
    margin-right: 20rpx;
    padding: 0 12px;
}

.order-btn button:last-child {
    margin-right: 0;
}