.item {
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    clear: both;
}

.item.full_screen {
    padding-left: 16rpx;
}

.item .img {
    width: 100%;
    height: 690rpx;
    position: relative;
}

.item .img.more_height {
    height: 750rpx;
}

.item .img image {
    width: 100%;
    height: 100%;
}

.item .img .limit_view {
    width: 100%;
    height: 94rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.item .img .teshu {
    background: linear-gradient(90deg,#ff3988 0%,#b423d4 100%);
    height: 80rpx;
}

.item .img .limit_view image {
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.item .img .limit_view .limit {
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    position: absolute;
    bottom: 22rpx;
    left: 0;
    right: 0;
    z-index: 99;
    color: white;
}

.item .img .teshu .limit {
    bottom: 20rpx;
}

.item .img .limit .icon-time {
    display: inline-block;
    width: 28rpx!important;
    height: 28rpx!important;
    vertical-align: -9%;
    margin-right: 10rpx;
}

.item .img .limit_view.cut_price .limit {
    padding-left: 110rpx;
    bottom: 21rpx;
}

.item .img .limit_view .limit .number {
    font-weight: 500;
    display: inline-block;
    box-sizing: border-box;
    height: 40rpx;
    border-radius: 6rpx;
    color: #ffffff;
    text-align: center;
}

.item .img .limit_view.cut_price .limit .number {
    color: #ffffff;
}

.item .img .limit_view .limit.pintuan .number {
    background: none;
    color: white;
}

.item .img .limit_view .limit .colon {
    display: inline-block;
    text-align: center;
}

.item .img .limit_view .limit .text_day {
    width: auto;
}

.item .img .limit_view .limit.pintuan .colon {
    width: 12rpx;
}

.item .img .limit_view .limit2 {
    text-align: center;
}

.item .img .limit_view .reduce_price {
    height: 36rpx;
    line-height: 36rpx;
    color: #f6304b;
    background-color: #fff;
    border-radius: 6rpx;
    font-size: 24rpx;
    padding: 0 14rpx;
    position: relative;
    margin-left: 20rpx;
}

.item .img .limit_view .reduce_price .icon {
    position: absolute;
    top: 10rpx;
    left: -6rpx;
    border-top: 8rpx solid transparent;
    border-right: 8rpx solid #fff;
    border-bottom: 8rpx solid transparent;
}

.item .img .tag_icon {
    position: absolute;
    top: -8rpx;
    left: 0;
}

.item .img .tag_icon image {
    background: transparent;
    width: 88rpx;
    height: 92.8rpx;
}

.item .title {
    width: 100%;
    color: #222;
    text-align: center;
    font-size: 32rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    white-space: normal;
    word-break: break-all;
    overflow: hidden;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.item .price {
    width: 100%;
    text-align: center;
    font-size: 36rpx;
    color: #ff7800;
    font-weight: 500;
}

.item .price .old_price {
    margin-left: 10rpx;
    font-size: 26rpx;
    color: #aaaaaa;
    text-decoration: line-through;
}

.item .price .icon-vip {
    display: inline-block;
    width: 50rpx;
    height: 24rpx;
    background-size: cover;
    margin-left: 10rpx;
}

.member_icon {
    font-size: 18rpx;
    margin-left: 10rpx;
    display: inline-block;
    width: 56rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #deb567;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    position: relative;
    top: -4rpx;
}

.r_big_content_new_title {
    line-height: 36rpx;
    font-weight: 500;
    height: 72rpx;
    color: #222;
    width: 90%;
    font-size: 32rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 0 auto;
}

.height3 {
    height: 517.5rpx!important;
}