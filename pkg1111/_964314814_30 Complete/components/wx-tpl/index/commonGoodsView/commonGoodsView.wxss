.r_small {
    width: 336rpx;
    float: left;
    margin: 10rpx 9rpx;
    box-sizing: border-box;
    background-color: white;
}

.r_small .price_ico {
    width: 70rpx;
    height: 39rpx;
    line-height: 39rpx;
    display: inline-block;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.r_small .sale_ico {
    background-color: #f95341;
}

.r_small .order_price {
    background-color: #60cb25;
}

.r_small .bg {
    position: relative;
    width: 100%;
    height: 336rpx;
}

.r_small .bg image {
    width: 100%;
    height: 100%;
    background-color: transparent;
}

.r_small .bg image.bg_img {
    background-color: #eee;
}

.r_small .bg1 {
    position: relative;
    width: 100%;
    height: 270rpx;
}

.r_small .bg3 {
    position: relative;
    width: 100%;
    height: 480rpx;
}

.r_content {
    padding: 15rpx 10rpx 15rpx 18rpx;
    height: 172rpx;
    box-sizing: border-box;
    position: relative;
}

.r_content .name {
    width: 100%;
    line-height: 40rpx;
    height: 34rpx;
    font-size: 26rpx;
    display: block;
    position: relative;
    color: #222;
    margin-left: 2rpx;
}

.goods_recommend_view {
    display: inline-block;
    margin: 0;
    padding: 0;
    position: relative;
    margin-right: 8rpx;
    width: 30rpx;
    height: 34rpx;
}

.goods_label_recommend {
    color: #fff;
    margin: 0;
    padding: 0;
    background-color: #ff7800;
    border-radius: 4rpx;
    text-align: center;
    font-size: 22rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 111;
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
}

.r_content .price {
    padding-top: 20rpx;
    display: inline-block;
    color: rgb(250,120,0);
    height: 30rpx;
    line-height: 30rpx;
    font-size: 32rpx;
    margin-left: -4rpx;
}

.r_content .price abcd {
    font-size: 20rpx;
    color: #aaa;
    text-decoration: line-through;
    padding-left: 10rpx;
}

.r_small .r_content .price view {
    float: left;
}

.r_small .r_content .price i {
    font-size: 24rpx;
}

.r_small .r_content .price .integer_num {
    font-size: 32rpx;
    font-weight: 500;
}

.r_small .r_content .price .remainder {
    font-size: 22rpx;
    font-weight: 500;
}

.r_small .r_content .price abcd {
    float: left;
    color: #aaa;
    font-size: 22rpx;
    margin-top: 4rpx;
}

.r_small .r_content .price .icon-vip {
    display: inline-block;
    width: 50rpx;
    height: 24rpx;
    background-size: cover;
    margin-left: 10rpx;
}

.member_icon {
    font-size: 18rpx;
    margin-left: 10rpx;
    display: inline-block;
    width: 56rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #deb567;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    position: relative;
    top: -4rpx;
}

.limit_view {
    width: 100%;
    height: 60rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.teshu {
    background: linear-gradient(90deg,#ff3988 0%,#b423d4 100%);
    height: 52rpx;
}

.limit_view .limit {
    width: 100%;
    padding-left: 80rpx;
    font-size: 24rpx;
    position: absolute;
    bottom: 19rpx;
    line-height: 24rpx;
    color: white;
}

.limit_view .limit2 {
    padding-left: 0;
    text-align: center;
}

.teshu .limit {
    bottom: 15rpx;
}

.limit_view .limit.more {
    padding-left: 74rpx;
}

.limit_view.cut_price .limit {
    padding-left: 92rpx;
    bottom: 14rpx;
}

.limit_view .limit image {
    background-color: transparent;
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
}

.limit_view .limit2 {
    bottom: 14rpx;
}

.limit_view .limit2 .icon-time {
    margin-right: 10rpx;
}

.limit_view .limit .time {
    display: inline-block;
    margin-left: 4rpx;
    vertical-align: middle;
}

.tag_icon {
    position: absolute;
    top: -6rpx;
    left: 0;
}

.tag_icon image {
    background: transparent;
    width: 71.5rpx!important;
    height: 75.4rpx!important;
    display: block;
}

.r_content .buy_car {
    background: url(https://xcximg.197.com/xcx/sc_gwc.png) 26rpx 24rpx no-repeat;
    background-size: 42rpx 42rpx;
    width: 110rpx;
    height: 68rpx;
    position: absolute;
    bottom: 18rpx;
    right: -16rpx;
    z-index: 2;
}

.goods_recommend_view {
    display: inline-block;
    position: relative;
    margin-right: 4rpx;
}

.goods_recommend_text {
    display: inline-block;
    width: 230rpx;
    height: 40rpx;
