@import "../../__wuBaseWxss__/11.wxss";

.in-hear {
    width: 100%;
    height: 222rpx;
}

.in-hear image {
    width: 100%;
    height: 222rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.in-hear .in-btn-box {
    min-width: 320rpx;
}

.in-hear .in-btn-box .in-btn {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 26rpx;
    border: 1px solid #fff;
    border-radius: 25rpx;
    margin-top: 10rpx;
}

.in-hear .in-right {
    position: absolute;
    right: 0;
    top: 30rpx;
    width: 122rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 22rpx;
    text-align: center;
    color: #fefefe;
    background-color: rgba(255,255,255,0.2);
    border-radius: 20rpx 0 0 20rpx;
}

.in-select {
    width: 400rpx;
    height: 60rpx;
    border-radius: 45rpx;
    margin: 20rpx auto;
}

.in-select text {
    width: 50%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}

.in-select text:first-child {
    border-top-left-radius: 45rpx;
    border-bottom-left-radius: 45rpx;
}

.in-select text:last-child {
    border-top-right-radius: 45rpx;
    border-bottom-right-radius: 45rpx;
}

.in-item {
    width: 48.5%;
    margin-bottom: 20rpx;
}

.in-item image {
    width: 100%;
    height: 345rpx;
}

.in-bg {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 2;
}

.in-bg .in-content {
    width: 560rpx;
    min-height: 350rpx;
    background-color: #fff;
    border-radius: 10rpx;
    text-align: center;
}

.in-bg .in-content .in-dlt {
    min-height: 240rpx;
    padding: 60rpx 40rpx 20rpx 40rpx;
    font-size: 30rpx;
}

.in-bg .in-content .in-dlt .in-txt {
    color: #999;
    text-align: left;
    line-height: 1.2em;
    padding: 5rpx 0;
    font-size: 26rpx;
}

.in-bg .in-showBtn {
    height: 112rpx;
    line-height: 112rpx;
    font-size: 40rpx;
    color: #00c200;
    border-top: 1px solid #d2d3d5;
}

.integral-order {
    width: 98rpx;
    height: 98rpx;
    color: #999;
    background-color: rgba(255,255,255,0.9);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: 1px solid #edeceb;
    position: fixed;
    right: 20rpx;
    bottom: 100rpx;
}

.integral-num {
    background-color: #ff8929;
    font-size: 20rpx;
    color: #fff;
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    border-radius: 100%;
    position: absolute;
    top: 0;
    right: -5rpx;
}