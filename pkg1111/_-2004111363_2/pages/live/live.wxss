page {
    background: #796ecc;
}

.live video {
    width: 100%;
    height: 82vh;
    display: block;
}

.live .scroll {
    width: 100%;
    height: 200rpx;
    padding: 0 20rpx;
}

.live .scroll .sc-item {
    margin-right: 20rpx;
    padding: 20rpx 0;
}

.live .scroll .sc-item image {
    width: 180rpx;
    height: 180rpx;
}

.live .scroll .sc-item .sc-ab {
    position: absolute;
    left: 0;
    bottom: 0;
    background: #000;
    opacity: .4;
    padding: 10rpx;
}

.live .l-mask .l-cancle {
    position: absolute;
    top: 0;
    right: 20rpx;
    color: #fff;
    z-index: 3;
}

.live .l-mask .l-main {
    width: 100%;
    margin-top: 70rpx;
}

.live .l-mask .l-main image {
    width: 250rpx;
    height: 250rpx;
}

.live .l-mask .l-main .l-price {
    color: #fa6bbf;
}

.live .l-mask .l-main .l-count text {
    width: 66rpx;
    height: 58rpx;
    line-height: 58rpx;
    text-align: center;
    font-size: 42rpx;
    background-color: #7d7dda;
    color: #fff;
}

.live .l-mask .l-main .l-count input {
    width: 100rpx;
    text-align: center;
    color: #fa6bbf;
}

.live .l-mask .l-title {
    color: #b2aaf3;
    margin: 20rpx 0;
}

.live .l-mask .l-sel {
    width: 150rpx;
    height: 83rpx;
    line-height: 83rpx;
    text-align: center;
    color: #fff;
}

.bg7d {
    background-color: #7d7dda;
}

.bgfa {
    background-color: #fa6bbf;
}

.l-btn {
    width: 275rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    background-color: #7d7dda;
}

.l-shop {
    width: 102rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 10rpx;
    background-color: #7d7dda;
    text-align: center;
    color: #fff;
    font-size: 50rpx;
}

.scroll-ab {
    position: absolute;
    bottom: 10rpx;
    left: 0;
}

