page {
    background-color: #d65840;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.more-lst {
    width: 100%;
    padding: 0 30rpx;
}

.lst {
    margin-top: 31rpx;
    position: relative;
}

.lst image {
    width: 100%;
}

.lst .lst-open {
    position: absolute;
    top: 45%;
    left: 0;
    width: 100%;
    text-align: center;
    z-index: 1;
    font-size: 26rpx;
    color: #fff;
}

.lst .lst-txt {
    position: absolute;
    bottom: 15%;
    left: 0;
    width: 100%;
    text-align: center;
    font-size: 26rpx;
}