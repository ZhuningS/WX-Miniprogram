.sp-lt {
    width: 100%;
    padding: 20rpx;
}

.sp-lt .sp-item {
    width: 350rpx;
    height: 170rpx;
    background: #ccc;
    margin-bottom: 10rpx;
    background-image: url("http://j.vzan.cc/miniapp/img/myicon.png");
    background-repeat: no-repeat;
    background-size: cover;
    padding: 20rpx;
}

.sp-lt .sp-btn {
    width: 95%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    border-radius: 4rpx;
    position: fixed;
    bottom: 30rpx;
    margin: 0 auto;
}

.sp-lt .icon-Choice_xuanze {
    position: absolute;
    top: 0;
    right: 10rpx;
    font-size: 40rpx;
}

.sp-mask {
    height: 156rpx;
    position: relative;
    margin: 20rpx 26rpx;
    background: #fff;
    padding: 0 50rpx;
}

.sp-mask .sp-icon {
    width: 86rpx;
    height: 86rpx;
    position: absolute;
    top: 0;
    left: -14rpx;
}