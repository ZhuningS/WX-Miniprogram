.appeal {
    padding-bottom: 88rpx;
}

.appeal .rect150 {
    height: 150rpx;
    width: 150rpx;
}

.appeal .pt20 {
    padding-top: 20rpx;
}

.appeal .width75 {
    width: 75%;
}

.appeal .header {
    padding: 0 31rpx 20rpx 20rpx;
}

.appeal .header .commodity-avator {
    background-color: #eee;
}

.appeal .header .title {
    font-size: 28rpx;
}

.appeal .appeal-item {
    height: 100rpx;
}

.appeal .appeal-item .picker {
    height: 100rpx;
    flex: 1;
    line-height: 100rpx;
    text-align: right;
}

.appeal .appeal-item:nth-of-type(1) {
    border-bottom: 1px solid #eee;
}

.appeal .tips {
    height: 64rpx;
    line-height: 64rpx;
    background-color: #f7f7f7;
}

.appeal .upload {
    padding-bottom: 27rpx;
    padding-top: 27rpx;
}

.appeal .upload .btn-upload {
    border: 1px dotted #999;
    justify-content: center;
}

.appeal .upload .upload-img .close {
    right: -10rpx;
    top: -10rpx;
    height: 30rpx;
    width: 30rpx;
    background: rgba(191,184,187,0.8);
    border-radius: 100%;
    text-align: center;
    line-height: 30rpx;
}

.appeal .upload .upload-img.ml0 {
    margin-left: 0;
}

.appeal .btn-confirm {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    position: fixed;
    bottom: 0;
}

.appeal .bgD32A7C {
    background-color: #c9201a;
}