.my .m-value {
    height: 130rpx;
    padding: 36rpx 0;
    background: #fff;
    border-top: 1px solid #f7f7f7;
    margin: 24rpx 22rpx 0 22rpx;
    border-radius: 10rpx;
}

.my .m-value view:first-child {
    border-right: 1px solid #f7f7f7;
}

.my .m-valSc {
    width: 100%;
    height: 420rpx;
    background: #fff;
    margin-top: 20rpx;
    padding-top: 20rpx;
}

.my .m-valSc scroll-view {
    padding: 45rpx 20rpx 0 10rpx;
}

.my .m-valSc .m-price {
    width: 280rpx;
    height: 160rpx;
    margin-left: 10rpx;
    padding: 20rpx;
    background-image: url("http://j.vzan.cc/miniapp/img/myicon.png");
    background-repeat: no-repeat;
    background-size: cover;
}

.my .m-valSc .m-price text:last-child {
    width: 280rpx;
}

.my .m-valSc .m-pmore {
    width: 280rpx;
    height: 160rpx;
    text-align: center;
    line-height: 160rpx;
    border: 1px dotted #dfdeda;
}

.my .m-valSc .m-valbtn {
    width: 95%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    margin: 40rpx auto;
    margin-bottom: 0;
    border-radius: 8rpx;
}

.my .m-valSc .icon-Choice_xuanze {
    position: absolute;
    top: 0;
    right: 10rpx;
    font-size: 40rpx;
}

.my .m-tab {
    width: 100%;
    height: 68rpx;
    line-height: 68rpx;
    background: #fff;
    margin-top: 20rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid #f7f7f7;
}

.my .m-lst {
    width: 100%;
    height: 140rpx;
    background: #fff;
}

.my .m-lst .m-item {
    background: -webkit-linear-gradient(top,#696464,#413f3c);
    -webkit-background-clip: text;
    color: transparent;
}

.my .m-plug {
    width: 100%;
    margin-top: 20rpx;
    background: #fff;
}

.my .m-plug .m-plugitem {
    width: 33.3%;
    text-align: center;
    padding: 30rpx 0;
    border-bottom: 1px solid #f7f7f7;
}

.my .x-user {
    height: 260rpx;
    display: flex;
    justify-content: center;
    padding-top: 30rpx;
    overflow: hidden;
}

.my .x-show-none {
    display: flex;
    flex-direction: column;
    width: 672rpx;
    height: 232rpx;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    overflow: hidden;
}

.my .x-userLogo {
    height: 100rpx;
    width: 100rpx;
    border-radius: 50rpx;
    background-color: white;
    text-align: center;
    line-height: 100rpx;
    color: #eee;
}

.my .x-getWxCard {
    width: 230rpx;
    height: 70rpx;
    border-radius: 35rpx;
    display: flex;
    line-height: 70rpx;
    background-color: white;
    justify-content: center;
}

.my .x-show-header {
    display: flex;
}

.my .p30 {
    padding: 30rpx;
}

.my .check-vipinfo {
    width: 188rpx;
    height: 48rpx;
    text-align: center;
    line-height: 48rpx;
    border-radius: 24rpx;
    display: flex;
    color: white;
    font-size: 22rpx;
    border: 1px solid white;
    justify-content: center;
}

.my .vipBg-icon {
    background-image: url("http://j.vzan.cc/miniapp/img/enterprise/membercardbg.png");
    background-size: 286rpx 218rpx;
    background-repeat: no-repeat;
    background-position: 110% -80%;
}

.pageHide {
    height: 100vh;
    overflow: hidden;
}

.record-num {
    position: absolute;
    top: 0;
    right: 40rpx;
    width: 33rpx;
    height: 33rpx;
    border-radius: 50%;
    font-size: 20rpx;
    line-height: 33rpx;
    text-align: center;
}