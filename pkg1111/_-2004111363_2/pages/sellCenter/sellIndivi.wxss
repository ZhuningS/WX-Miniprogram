page {
    box-sizing: border-box;
}

.person {
    width: 100%;
    height: 270rpx;
    font-size: 36rpx;
    background-size: cover;
}

.person image {
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}

.main {
    width: 690rpx;
    position: absolute;
    top: 235rpx;
    color: #333;
    left: 50%;
    margin-left: -345rpx;
}

.main .m-price {
    width: 100%;
    height: 250rpx;
    background: #fff;
    text-align: center;
}

.main .m-pricebtn {
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    border-top: 1px solid #f7f7f7;
    padding: 0 20rpx;
}

.main .icon-icon_yongjin {
    background: -webkit-linear-gradient(top,#FFC823,#FFAE22);
    -webkit-background-clip: text;
    color: transparent;
    font-size: 45rpx;
    margin-right: 20rpx;
}

.main .m-sell {
    width: 100%;
    height: 190rpx;
    margin: 15rpx 0;
    background: #fff;
}

.main .m-sellitem {
    width: 50%;
}

.main .icon1 {
    background: -webkit-linear-gradient(top,#FFC823,#FFAE22);
    -webkit-background-clip: text;
    color: transparent;
    font-size: 60rpx;
}

.main .m-method {
    width: 100%;
    height: 130rpx;
    background: #fff;
    padding: 0 20rpx;
}

.main .m-method .icon2 {
    background: -webkit-linear-gradient(top,#4AC2FF,#22B4FF);
