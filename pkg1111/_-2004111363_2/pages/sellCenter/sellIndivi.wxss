.qrcode-mask {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    width: 560rpx;
    z-index: 1;
}

.qrcode-mask .qrcode-main {
    width: 560rpx;
    position: fixed;
    top: 100rpx;
    left: 50%;
    margin-left: -280rpx;
    z-index: 2;
}

.qrcode-mask .qrcode-main canvas {
    width: 560rpx;
    height: 556rpx;
}

.qrcode-mask .qrcode-main .qrcodeBtn {
    width: 100%;
    height: 120rpx;
    background: #fff;
}

.qrcode-mask .qrcode-main .qrcodeBtn .qrcode-btn {
    width: 450rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 36rpx;
    border-radius: 8rpx;
    margin: 0 auto;
}

.qrcode-mask .qrcode-main .vas-cancle {
    margin-top: 30rpx;
    font-size: 80rpx;
    color: #fff;
}

.qrcode-mask .bg {
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.4);
    position: fixed;
    top: 0;
    z-index: -1;
    left: 0;
}