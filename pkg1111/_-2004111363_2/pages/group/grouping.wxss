.hear-fix {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
    background: #ffffff;
}

.hear {
    height: 100rpx;
    line-height: 100rpx;
}

.group {
    width: 100%;
    padding: 0 20rpx;
}

.group .group-item {
    width: 100%;
    height: 324rpx;
    margin-top: 20rpx;
    background-color: #fff;
    padding: 20rpx 20rpx 0 20rpx;
}

.group .group-item .group-img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.group .group-item .group-con {
    height: 200rpx;
}

.group .group-item .group-size {
    width: 80rpx;
    text-align: center;
    height: 32rpx;
    border: 1px solid #FFB049;
    font-size: 22rpx;
    border-radius: 15rpx;
    color: #FFB049;
}

.cf200 {
    color: #F20033;
}

.cffb {
    color: #FFB049;
}

.btn-startGroup {
    width: 120rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    background-color: #f20033;
    color: #fff;
    font-size: 28rpx;
    border-radius: 8rpx;
}

.btn-disable {
    width: 120rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    background-color: #e6e6e6;
    color: #fff;
    font-size: 28rpx;
    border-radius: 8rpx;
}