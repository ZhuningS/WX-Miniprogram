@import "../../__wuBaseWxss__/5.wxss";

@import "../../__wuBaseWxss__/12.wxss";

.group {
    width: 100%;
}

.group .loding {
    width: 100%;
    height: 100vh;
}

.group .g-pro {
    background: #fff;
    padding: 20rpx;
}

.group .g-pro .g-clock {
    width: 270rpx;
    height: 85rpx;
    text-align: center;
    font-style: italic;
    box-shadow: 0 10rpx 40rpx #f7f5f2;
}

.group .g-pro .g-clock text:first-child {
    font-style: normal;
}

.group .g-pro .g-userImg {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-left: 15rpx;
    box-shadow: 0 0 5rpx #999;
}

.group .g-more {
    margin-top: 20rpx;
    background: #fff;
    padding: 40rpx 0;
}

.group .g-more .g-title {
    padding-left: 30rpx;
    border-left: 6rpx solid #f20033;
}

.group .g-more .g-moreLst {
    padding: 20rpx 30rpx;
}

.group .g-more .g-moreLst .g-moreitem {
    background-color: #fafafa;
    margin-top: 20rpx;
    height: 110rpx;
    padding-left: 20rpx;
}

.group .g-more .g-moreLst .g-moreitem>image {
    width: 88rpx;
    height: 88rpx;
    border-radius: 100%;
}

.group .g-more .g-moreLst .g-moreitem .g-morebtn {
    width: 164rpx;
    background-color: #f20033;
    height: 110rpx;
    text-align: center;
    line-height: 110rpx;
    color: #fff;
}

.group .g-detail {
    margin-top: 20rpx;
    background: #fff;
}

.group .g-detail .g-deltitle {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    text-align: center;
}

.group .g-bottom {
    background: #f9f9f9;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #eee;
}

.group .g-bottom .g-home {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    color: #ccc;
}

.group .g-bottom .g-btn {
    height: 100rpx;
    font-size: 32rpx;
    text-align: center;
}