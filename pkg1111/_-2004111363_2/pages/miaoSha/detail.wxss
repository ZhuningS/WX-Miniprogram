@import "../../__wuBaseWxss__/0.wxss";

@import "../../__wuBaseWxss__/10.wxss";

.header image {
    width: 100%;
}

.header .cutDown {
    width: 100%;
    height: 120rpx;
    background-image: url('http://vzan-img.oss-cn-hangzhou.aliyuncs.com/upload//20180628/cc4bb7706a084039aaf233ded0acad361530187001317.png');
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 20rpx 0 40rpx;
}

.header .cutDown .cutNum {
    min-width: 32rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    background: #2E2A2A;
    text-align: center;
    margin: 0 5rpx;
    color: #fff;
}

.wrap-title {
    width: 100%;
    padding: 38rpx 20rpx;
    background: #fff;
}

.wrap-deal {
    width: 100%;
    background: #fff;
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 20rpx;
    border-bottom: 1px solid #f7f7f7;
}

.wrap-deal .wrap-line {
    width: 6rpx;
    height: 32rpx;
    background: #F20033;
    margin-right: 20rpx;
}

.wrap-btn {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1;
    background-color: #fff;
}

.wrap-btn .wrap-buy {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    text-align: center;
}

.shopCar {
    width: 100vh;
    height: 100vh;
}

.close {
    width: 100%;
    height: 100vh;
}

.c-good-btn-icon {
    color: #777;
    width: 125rpx;
    height: 100rpx;
    font-size: 24rpx;
}