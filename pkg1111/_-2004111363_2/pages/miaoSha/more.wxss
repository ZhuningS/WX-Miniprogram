@import "../../__wuBaseWxss__/7.wxss";

.c-ms-more-hide {
    height: 100vh;
    overflow: hidden;
}

.c-ms-more {
    width: 100%;
}

.c-ms-more .c-ms-banner {
    width: 100%;
    background-color: #fff;
    padding-bottom: 30rpx;
    margin-bottom: 20rpx;
}

.c-ms-more .c-ms-banner>image {
    width: 100%;
}

.c-ms-more .c-ms-banner .c-ms-countDonw {
    width: 100%;
    margin-top: 30rpx;
}

.c-ms-more .c-ms-banner .c-ms-countDonw .ms-line {
    color: #d0d0d0;
}

.c-ms-more .c-ms-banner .c-ms-countDonw .ms-time {
    width: 45rpx;
    text-align: center;
    padding: 5rpx 0;
    font-size: 24rpx;
    color: #444;
    border-radius: 5rpx;
    border: 1px solid #d9d8d9;
    margin: 0 8rpx;
    font-weight: bold;
}

.c-ms-more .c-ms-banner .c-ms-countDonw .ms-radius {
    font-size: 22rpx;
    font-weight: bold;
    color: #333;
}

.c-ms-more .c-ms-mask {
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.2);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1;
}

.c-ms-more .c-ms-mask .c-ms-mask {
    width: 450rpx;
    height: 525rpx;
    background: #fff;
    padding: 30rpx;
    color: #333;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -262.5rpx;
    margin-left: -225rpx;
    z-index: 1;
}

.c-ms-more .c-ms-mask .c-ms-mask .c-ms-sc {
    line-height: 1.5;
    max-height: 600rpx;
    min-height: 300rpx;
}

.c-ms-more .c-ms-mask .c-ms-icon {
    font-size: 70rpx;
    color: #fff;
    position: absolute;
    bottom: 20%;
    left: 50%;
    margin-left: -35rpx;
    z-index: 1;
}