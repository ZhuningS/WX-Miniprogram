@import "../../__wuBaseWxss__/3.wxss";

.order {
    width: 100%;
    color: #333;
}

.order .header {
    width: 100%;
    height: 155rpx;
    background: #fff;
}

.order .wrap-good {
    margin-top: 20rpx;
    background: #fff;
}

.order .wrap-good .wrap-message {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 30rpx;
}

.order .wrap-order {
    width: 100%;
    background: #fff;
    margin: 24rpx 0;
    padding: 0 30rpx;
    font-size: 26rpx;
}

.order .wrap-mode {
    width: 100%;
    height: 200rpx;
    background: #fff;
    padding-left: 30rpx;
}

.order .wrap-mode .mode-weixin {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding-right: 30rpx;
    border-bottom: 1px solid #eee;
}

.order .wrap-mode .mode-weixin:last-child {
    border-bottom: none;
}

.order .wrap-btn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
}

.order .wrap-btn>form {
    width: 209rpx;
    height: 100rpx;
}

.order .wrap-btn>form button {
    width: 100%;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
}