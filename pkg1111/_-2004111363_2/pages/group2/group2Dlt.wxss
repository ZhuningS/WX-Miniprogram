page {
    background: #fff;
}

.dlt-hear {
    width: 100%;
    height: 260rpx;
}

.dlt-hear image {
    width: 112rpx;
    height: 125rpx;
    margin-right: 20rpx;
}

.dlt-user {
    width: 100%;
    background: #fff;
    padding: 40rpx 20rpx;
}

.dlt-pro {
    width: 100%;
}

.dlt-pro .dlt-item {
    width: 100%;
    background: #ffffff;
    padding: 20rpx;
}

.dlt-pro .dlt-item image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.dlt-pro .dlt-item .dlt-ps {
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 10rpx;
    background: #ff9a37;
    color: #fff;
}

.dlt-pro .dlt-item .dlt-con {
    height: 200rpx;
}

.dlt-olt {
    width: 100%;
    background: #fff;
    padding: 20rpx;
}

.dlt-olt .dlt-copy {
    width: 90rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    color: #666;
    border: 1px solid #666;
    border-radius: 6rpx;
    font-size: 24rpx;
}

.btn-invit {
    margin: 0 auto;
    font-size: 30rpx;
    width: 95%;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 8rpx;
}

.dlt-check {
    width: 100%;
    justify-content: flex-end;
    padding: 20rpx;
    background: #f7f7f7;
}

.dlt-check .dlt-plain {
    color: #666;
    border-radius: 6rpx;
    border: 1px solid #999;
    width: 180rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
}

.icon-shouye2 {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 50%;
    font-size: 36rpx;
    position: fixed;
    bottom: 50rpx;
    right: 30rpx;
    font-size: 50rpx;
}