.c-group {
    width: 100%;
}

.c-group .c-group-main {
    width: 100%;
}

.c-group .c-group-main .c-group-top {
    width: 100%;
    padding: 20rpx 30rpx;
}

.c-group .c-group-main .c-group-title {
    width: 100%;
    padding: 30rpx;
    background-color: #fff;
}

.c-group .c-group-main .c-group-now {
    width: 100%;
    margin-top: 25rpx;
    background-color: #fff;
    padding-left: 30rpx;
}

.c-group .c-group-main .c-group-now .c-group-now-item {
    width: 100%;
    padding: 30rpx 30rpx 30rpx 0;
    border-bottom: 1px solid #eee;
}

.c-group .c-group-main .c-group-now .c-group-now-item .c-group-now-logo {
    width: 82rpx;
    height: 82rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.c-group .c-group-main .c-group-now .c-group-now-item .c-group-now-btn {
    width: 120rpx;
    height: 46rpx;
    line-height: 46rpx;
    border-radius: 23rpx;
    font-size: 26rpx;
    margin-left: 30rpx;
    text-align: center;
}

.c-group .c-group-main .c-group-now .c-group-now-more {
    width: 100%;
    padding: 30rpx 0;
    font-size: 24rpx;
}

.c-group .c-group-main .c-group-now .c-group-now-more .c-group-now-up {
    transform: rotate(180deg);
    transition: all .2s linear;
}

.c-group .c-group-main .c-group-now .c-group-now-more .c-group-now-down {
    transform: rotate(0);
    transition: all .2s linear;
}

.c-group .c-group-main .c-group-mode {
    width: 100%;
    margin-top: 25rpx;
    background-color: #fff;
    padding-left: 30rpx;
}

.c-group .c-group-main .c-group-mode .c-group-mode-title {
    width: 100%;
    padding: 30rpx 30rpx 30rpx 0;
    border-bottom: 1px solid #f6f6f6;
}

.c-group .c-group-main .c-group-mode .c-group-mode-main {
    width: 100%;
    padding: 50rpx 0 50rpx 0;
}

.c-group .c-group-main .c-group-mode .c-group-mode-main .num {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 1px solid #333;
    font-size: 24rpx;
    font-weight: bold;
    flex-shrink: 0;
}

.c-group .c-group-main .c-group-mask {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
}

.c-group .c-group-main .c-group-mask .bg {
    width: 100%;
    height: 100vh;
    background-color: rgba(0,0,0,0.4);
}

.c-group .c-group-main .c-group-mask .main {
    color: #666;
    width: 480rpx;
    background-color: #fff;
    position: fixed;
    top: 20%;
    left: 50%;
    margin-left: -240rpx;
    z-index: 3;
    padding: 30rpx;
}

.c-group .c-group-main .c-group-mask .main .main-title {
    font-size: 34rpx;
    width: 100%;
    margin-bottom: 40rpx;
    text-align: center;
}

.c-group .c-group-main .c-group-mask .main .main-btn {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.c-group .c-group-main .c-group-btn {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 1;
    background-color: #fff;
}

.c-group .c-group-main .c-group-btn .c-good-btn-icon {
    color: #777;
    width: 125rpx;
    height: 100rpx;
    font-size: 24rpx;
}

.c-group .c-group-main .c-group-btn .c-group-btn-main {
    height: 100rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
}