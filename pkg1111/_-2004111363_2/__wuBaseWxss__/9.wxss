.t-pick {
    width: 100%;
    height: 100vh;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 5;
}

.t-pick__bg {
    background-color: #000;
    opacity: .6;
    width: 100%;
    height: 50vh;
}

.t-pick__main {
    width: 100%;
    height: 50vh;
    color: #373737;
    background-color: #fff;
}

.t-pick__main .t-btn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 20rpx;
    font-size: 32rpx;
    border-top: 1px solid #f5f5f5;
    z-index: 5;
}

.t-pick__main .t-btn>view:nth-child(1) {
    color: #121212;
}

.t-pick__main .t-btn>view:nth-child(2) {
    color: #1aad19;
}

.t-pick__main .pick {
    width: 100%;
    height: 500rpx;
    border-top: 1px solid #f5f5f5;
}

.t-pick__main .pick picker-view-column {
    width: 20%;
    text-align: center;
    z-index: 6;
}

.t-pick__main .pick picker-view-column view {
    line-height: 50px;
}