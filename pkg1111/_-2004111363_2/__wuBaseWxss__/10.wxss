.c-shop {
    max-height: 60vh;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 5;
    background: #fff;
}

.c-shop .c-item {
    position: relative;
    height: 150rpx;
}

.c-shop .c-item .img {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: -48rpx;
    left: 22rpx;
    border-radius: 6rpx;
}

.c-shop .c-item .c-price {
    height: 150rpx;
    color: #666;
    padding-left: 243rpx;
}

.c-shop .p-price {
    color: #ff4422;
}

.c-shop .c-sel {
    padding-top: 30rpx;
    margin: 0 20rpx;
}

.c-shop .c-name {
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #333;
}

.c-shop .c-pic {
    margin: 30rpx 0;
    border-bottom: 1px solid #f5f5f5;
}

.c-shop .c-pic .c-val {
    margin-right: 30rpx;
    padding: 20rpx;
    font-size: 24rpx;
    margin-bottom: 20rpx;
    border-radius: 6rpx;
}

.c-shop .shop-btn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 34rpx;
}

.c-shop .btn-no {
    color: #111;
    background-color: #f3f3f3;
}

.c-shop .count {
    width: 76rpx;
    height: 76rpx;
    line-height: 76rpx;
    background-color: #f3f3f3;
    text-align: center;
}

.c-shop-bg {
    width: 100%;
    height: 100vh;
    background-color: rgba(0,0,0,0.2);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
}