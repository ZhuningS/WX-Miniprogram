.tabbar {
    background: rgba(255,255,255,.98);
    display: flex;
    position: fixed;
    bottom: 0;
    width: 100%;
    border-top: 1px solid #ededed;
    z-index: 9999;
    box-shadow: 0rpx 4rpx 10rpx rgba(0,0,0,.3);
}

.tabbar form {
    flex: 1;
}

.tabbar .item {
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
    padding: 10rpx 0 10rpx;
}

.tabbar .item image {
    width: 52rpx;
    height: 52rpx;
    margin-bottom: 4rpx;
}

.tabbar .item .text {
    text-align: center;
    color: #999;
    font-size: 20rpx;
    line-height: 1;
}

.tabbar .select .text {
    color: #05b00f;
}