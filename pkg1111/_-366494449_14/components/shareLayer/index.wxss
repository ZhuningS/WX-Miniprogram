.shareLayer {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99999;
}

.shareLayer .mask {
    position: absolute;
    background: #000;
    opacity: .5;
    z-index: 99998;
}

.shareLayer .content {
    padding: 20rpx;
    position: absolute;
    background: #fff;
    height: 400rpx;
    z-index: 99999;
    bottom: 0;
    width: 100%;
}

.button-cancel {
    position: absolute;
    bottom: 0;
    text-align: center;
    color: #777;
    font-size: 28rpx;
    background: #f5f5f5;
    left: 0;
    height: 90rpx;
    line-height: 90rpx;
    right: 0;
}