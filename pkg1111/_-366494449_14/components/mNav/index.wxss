.blockItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 28rpx 0 28rpx;
    width: 25%;
    float: left;
}

.blockItem__img {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
}

.blockItem__text {
    text-align: center;
    color: #444344;
    font-size: 24rpx;
    line-height: 1;
}