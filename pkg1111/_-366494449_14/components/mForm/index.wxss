.mForm {
    background: #fff;
    box-shadow: 0 4px 16px 0 rgba(0,0,0,0.05);
    border-radius: 16px;
    margin: 32rpx;
}

.mForm .title {
    text-align: center;
    font-size: 36rpx;
    color: #333;
    padding: 30rpx 0;
    font-weight: 500;
}

.mForm__item {
    position: relative;
    padding: 20rpx;
    display: flex;
    margin: 0 32rpx;
    border-bottom: 1px solid #eee;
    align-items: center;
    z-index: 99;
}

.mForm__item>input,.mForm__item>textarea {
    vertical-align: top;
}

.mForm__item_submit {
    text-align: center;
    margin-bottom: 0;
    border: none;
}

.mForm__item_submit button {
    width: 100%;
}

.mForm__item input,.mForm__item textarea {
    position: relative;
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    color: #888;
    background-color: #fff;
    padding: 0;
    flex: 1;
}

.mForm__item textarea {
    width: 100%;
    height: 120rpx;
}

.mForm__item .label {
    font-size: 28rpx;
    display: flex;
    margin-right: 20rpx;
    width: 150rpx;
    color: #333;
    text-align: left;
}

.mForm__item .controller {
    flex: 1;
}

.checkbox-group label,.radio-group label {
    display: inline-block;
    margin-right: 30rpx;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    min-width: 120rpx;
    color: #333;
}

radio .wx-radio-input {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
}

radio .wx-radio-input.wx-radio-input-checked::before {
}

checkbox .wx-checkbox-input {
    width: 40rpx;
    height: 40rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
}

.picker {
    color: #888;
    font-size: 28rpx;
}

picker {
    flex: 1;
}

.mForm__item .required {
    position: relative;
    top: 6rpx;
    color: red;
    width: 20rpx;
    margin-left: 6rpx;
}

input,textarea,picker {
    position: relative;
    z-index: 99;
}