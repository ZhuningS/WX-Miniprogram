.newCoupon {
    overflow: hidden;
    white-space: nowrap;
}

.coupon-item {
    position: relative;
    width: 270rpx;
    height: 160rpx;
    background-image: url("https://img.weixin.sundayer.cn/ruyitui/coupon@3x.png");
    background-repeat: no-repeat;
    background-size: 100%;
    margin-right: 26rpx;
    display: inline-block;
}

.coupon-item image {
    position: absolute;
    right: -6rpx;
    top: -14rpx;
    width: 100rpx;
    height: 100rpx;
}

.coupon-item .discount {
    color: #FF564F;
    text-align: left;
    margin-bottom: 4rpx;
    height: 102rpx;
    line-height: 112rpx;
}

.discount text {
    position: relative;
    bottom: -2rpx;
    font-size: 60rpx;
    font-weight: 500;
}

.coupon-item view {
    font-size: 20rpx;
    color: #666;
    padding: 0 30rpx;
    overflow: hidden;
    white-space: nowrap;
}

.coupon-list {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #999;
    text-align: center;
    margin-top: 20rpx;
}

.coupon-item .receive {
    position: absolute;
    right: 30rpx;
    top: 32rpx;
    width: 88rpx;
    text-align: center;
    line-height: 44rpx;
    border-radius: 32rpx;
    color: #FF564F;
    border: 1rpx solid #FF564F;
    padding: 2rpx 0;
    font-size: 24rpx;
}

.arrowIcon {
    margin-left: 10rpx;
    width: 20rpx;
    height: 20rpx;
}