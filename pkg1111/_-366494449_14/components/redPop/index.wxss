.mask {
    background-color: rgba(0,0,0,0.8);
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 99;
    opacity: .8;
}

.redpop {
    position: absolute;
    left: 50%;
    width: 580rpx;
    margin-left: -290rpx;
    bottom: 290rpx;
    top: 150rpx;
    color: #ff6061;
    font-size: 80rpx;
    z-index: 9999;
}

@-webkit-keyframes first1 {
    from {
        top: -100%;
    }

    to {
        top: 10%;
    }
}

@keyframes first1 {
    from {
        top: -100%;
    }

    to {
        top: 10%;
    }
}

.red-title {
    position: absolute;
    bottom: 336rpx;
    left: 170rpx;
    text-align: center;
    font-size: 120rpx;
    color: #ff6061;
    height: 100rpx;
    line-height: 100rpx;
    width: 150rpx;
}

.lq {
    background: #ffe603;
    color: #f35c25;
    font-size: 32rpx;
    padding: 0 30rpx;
    display: inline-block;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 16rpx;
}

.t1 {
    font-size: 120rpx;
    color: #ff6061;
    height: 187rpx;
}

.t1 text {
    font-size: 64rpx;
    color: #ffe78a;
}

.t2 {
    font-size: 38rpx;
    color: #fff;
}

.btn-close {
    position: absolute;
    left: 50%;
    margin-left: -32rpx;
    bottom: -10rpx;
    width: 64rpx;
    height: 64rpx;
}

.btn-close image {
    width: 64rpx;
    height: 64rpx;
}