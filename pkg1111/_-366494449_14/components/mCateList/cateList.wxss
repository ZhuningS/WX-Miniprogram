    margin-right: 8rpx;
    border: 1px solid #f5f5f5;
}

.newGoodStyle2>.newgoodsItem:nth-child(even)>.newgoodsItemWrap {
    position: relative;
    background-color: #fff;
    margin-left: 8rpx;
    border: 1px solid #f5f5f5;
}

.newGoodStyle2>.newgoodsItem>.newgoodsItemWrap>.newgoodsImgWrap {
    position: relative;
    height: 336rpx;
