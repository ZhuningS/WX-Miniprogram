.showItems {
    height: 84rpx;
    width: 100%;
    white-space: nowrap;
    background: #fff;
    position: relative;
    padding-right: 48rpx;
    border-bottom: 1px solid #f5f5f5;
}

.showItems>scroll-view view {
    display: inline-block;
    font-size: 30rpx;
    color: #333;
    margin: 0 32rpx;
    line-height: 88rpx;
}

.showItems .active {
    color: #FF4751;
    border-bottom: 6rpx solid #FF4751;
    box-sizing: border-box;
    line-height: 68rpx;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsInfoWrap>.btn-buy {
    position: absolute;
    bottom: 2rpx;
    right: 0;
    line-height: 56rpx;
    background: #ff4751;
    color: #fff;
    border-radius: 4rpx;
    text-align: center;
    font-size: 26rpx;
    width: 160rpx;
    background-image: -webkit-linear-gradient(90deg,#FF564F,#FE5F40);
}

.newGoodStyle {
    overflow: hidden;
    font-size: 0;
    padding: 30rpx 30rpx 0;
    background: #fff;
}

.newGoodStyle>.newgoodsItem {
    margin: 0 0 40rpx 0;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap {
    display: flex;
    position: relative;
    background-color: #fff;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsImgWrap {
    position: relative;
    height: 250rpx;
    width: 250rpx;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsImgWrap image {
    height: 250rpx;
    border-radius: 8rpx;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsInfoWrap {
    position: relative;
    padding: 0 25rpx;
    flex: 1;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsInfoWrap>.newgoodsName {
    font-size: 28rpx;
    color: #333;
    overflow: hidden;
    line-height: 42rpx;
    margin-bottom: 20rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsInfoWrap>.newgoodsPrice {
    position: absolute;
    bottom: 10rpx;
    display: flex;
    align-items: center!important;
    color: #ff4751;
    font-size: 36rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 20rpx;
    margin-left: -2rpx;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsInfoWrap>.newgoodsPrice>.newpriceshow {
    font-size: 24rpx;
    color: #aaa;
    margin-left: 20rpx;
    text-decoration: line-through;
    display: flex;
}

.newGoodStyle>.newgoodsItem>.newgoodsItemWrap>.newgoodsInfoWrap>.btn-buy {
    position: absolute;
    bottom: 2rpx;
    right: 0;
    line-height: 56rpx;
    background: #ff4751;
    color: #fff;
    border-radius: 4rpx;
    text-align: center;
    font-size: 26rpx;
    width: 160rpx;
    background-image: -webkit-linear-gradient(90deg,#FF564F,#FE5F40);
}

.newGoodStyle2 {
    overflow: hidden;
    font-size: 0;
    padding: 30rpx 30rpx 0;
    background: #fff;
}

.newGoodStyle2>.newgoodsItem {
    float: left;
    width: 50%;
    margin: 0 0 30rpx 0;
}

.newGoodStyle2>.newgoodsItem:nth-child(odd)>.newgoodsItemWrap {
    position: relative;
