}

.category {
    position: absolute;
    right: 0;
    background-color: #fff;
    box-shadow: -4rpx 0rpx 10rpx -2rpx rgba(150,145,145,0.575);
    top: 0;
    width: 48rpx;
    height: 100%;
}

.category image {
    margin: 26rpx auto;
    display: block;
    width: 28rpx;
    height: 28rpx;
}

.noResult {
    text-align: center;
    color: #aaa;
    padding: 30rpx 0;
