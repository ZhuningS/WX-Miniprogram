.goods-wrap {
    background-color: #fff;
    margin: 0 0 10rpx;
    padding: 10rpx 0 20rpx;
}

.goods-wrap::after {
    clear: both;
}

.goods-wrap .title {
    font-size: 30rpx;
    color: #444;
    margin: 10rpx 40rpx;
    line-height: 46rpx;
}

.goods-wrap .price {
    font-size: 38rpx;
    color: #dd2450;
    margin: 0 40rpx;
}

.goods-wrap .price .old {
    color: #999;
    margin: 20rpx;
    text-decoration: line-through;
    font-weight: 300;
}

.btn-go {
    float: right;
    line-height: 50rpx;
    font-size: 0;
}

.btn-go .btn {
    box-sizing: border-box;
    display: inline-block;
    background: #dd2450;
    color: #fff;
    padding: 0 30rpx;
    font-size: 28rpx;
    font-weight: 300;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 4rpx;
}

.btn-go .text {
    box-sizing: border-box;
    display: inline-block;
    background: #fdeceb;
    color: #ff5c53;
    padding: 0 30rpx;
    font-weight: 300;
    height: 60rpx;
    line-height: 60rpx;
    border: 1px solid #ff5c53;
}

.goods-wrap .time {
    line-height: 60rpx;
    border-top: 1px solid #f1f1f1;
    overflow: hidden;
}

.goods-wrap .left {
    font-size: 22rpx;
    color: #666;
    float: left;
    margin-left: 40rpx;
}

.goods-wrap .right {
    font-size: 20rpx;
    float: right;
    margin-right: 40rpx;
    color: #ff462a;
}