.buttonbar {
    position: relative;
    display: flex;
    padding: 20rpx 0 20rpx 30rpx;
    align-items: center;
    z-index: 9999;
    background: #fff;
}

.buttonbar .search_bar {
    display: flex;
    color: #bbb;
    border-radius: 50rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #f5f5f5;
    flex: 1;
    margin-right: 30rpx;
    width: 490rpx;
    padding: 0 0 0 30rpx;
    align-items: center;
    justify-content: center;
}

.search_bar image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}

.search_bar .classfy {
    margin: 0 20rpx;
}

.buttonbar .button-item {
    position: relative;
    padding: 0;
    font-size: 0;
    width: 48rpx;
    height: 48rpx;
    background: none;
    margin-right: 30rpx;
}

.buttonbar .button-item image {
    width: 48rpx;
    height: 48rpx;
}

.button-item .cartBadge {
    display: inline-block;
    background-color: #e64340;
    color: #fff;
    text-align: center;
    font-size: 18rpx;
    height: 24rpx;
    line-height: 24rpx;
    width: 24rpx;
    position: absolute;
    top: -6rpx;
    right: -14rpx;
    border-radius: 50%;
    z-index: 99;
}