page {
    padding-bottom: 100rpx;
}

.bg {
    position: relative;
    background: url("https://img.weixin.sundayer.cn/memberbg@2x.png") no-repeat;
    background-size: 100%;
    height: 300rpx;
}

.memberCard {
    position: absolute;
    top: 50rpx;
    width: 650rpx;
    height: 324rpx;
    background-repeat: no-repeat;
    background-size: 100%;
    left: 50%;
    margin-left: -325rpx;
    border-radius: 20rpx;
}

.logo {
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
    background-color: #eee;
    border: 2rpx solid #fff;
}

.cardInfo {
    margin-left: 20rpx;
}

.cardName text {
    font-size: 36rpx;
    color: #fff;
    padding-left: 6rpx;
}

.memberlevel {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 670rpx;
    height: 80rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -335rpx;
    border-radius: 24rpx 24rpx 0 0;
    background-image: -webkit-linear-gradient(0deg,#E2E9F1,#AFB8C5);
    padding: 0 30rpx;
}

.level1 {
    background-image: -webkit-linear-gradient(0deg,#F1D8A0,#D0A75D);
}

.memberlabel {
    display: flex;
    align-items: center;
    padding: 0 10rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 300;
    background: rgba(00,00,00,.4);
    border-radius: 50rpx;
    line-height: 38rpx;
    text-align: center;
    margin-top: 10rpx;
    white-space: nowrap;
}

.memberform {
    width: 690rpx;
    border-radius: 16rpx;
    background: #fff;
    margin: 100rpx auto 0;
    min-height: 500rpx;
    padding: 40rpx;
}

.memberform .title {
    text-align: center;
    font-weight: 500;
}

.btn-form {
    width: 600rpx;
    height: 80rpx;
    background: #3AAF49;
    border-radius: 8rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    margin-top: 40rpx;
}

.form__item {
    padding: 20rpx 0;
}

.section {
    background-color: #fff;
    margin-top: 20rpx;
}

.barItem,button.nobutton.barItem {
    height: 88rpx;
    display: flex;
    align-items: center;
    padding-right: 20rpx;
    border-bottom: 1px solid #f5f5f5;
}

.barItem.barItem_noMLeft {
    margin-left: 0;
}

.barItem.barItem_noBorder {
    border-bottom: 0;
}

.barList_sm .barItem {
    height: 70rpx;
}

.barItem:last-child {
    border-bottom: 0;
}

.barItem__icon {
    width: 32rpx;
    height: 32rpx;
    margin: 0 20rpx;
}

.barItem__info {
    flex: 1;
    font-size: 28rpx;
    display: flex;
    align-items: center;
}

.barItem__info__hd {
    width: 150rpx;
    margin-right: 60rpx;
    font-size: 28rpx;
    color: #333;
}

.barItem__info__bd {
    flex: 1;
}

.barItem__info__bd_right {
    text-align: right;
}

.barItem__arrowIcon {
    width: 20rpx;
    height: 20rpx;
    margin-left: 10rpx;
}

.barItem,button.nobutton.barItem {
    display: flex;
    align-items: center;
    margin-left: 30rpx;
    padding: 24rpx 30rpx 24rpx 0;
    line-height: 40rpx;
    border-bottom: 1rpx solid #f5f5f5;
}