page {
    background: #f5f5f5;
}

.shopList {
    box-sizing: border-box;
    overflow: hidden;
    border-top: 1px solid #e9e9e9;
    background: #fff;
}

.shopItem {
    box-sizing: border-box;
    width: 16.66666667%;
    text-align: center;
    position: relative;
    float: left;
    padding: 20rpx;
    border-right: 1rpx solid #d5d5d5;
    border-bottom: 1rpx solid #d5d5d5;
}

.shopItem__des {
}

.img_wrap {
    width: 86rpx;
    height: 86rpx;
    background: #fff;
    display: inline-block;
}

.shopItem__img {
    width: 80rpx;
    height: 80rpx;
}

.shopItem__img2 {
    width: 100rpx;
    height: 100rpx;
}

.shopItem__name {
    font-size: 28rpx;
    color: #444;
    font-weight: 500;
}

.shopItem__des {
    color: #999;
    line-height: 30rpx;
    font-weight: normal;
}

.shopfloor {
    font-size: 20rpx;
    font-weight: 300;
    color: #999;
    position: absolute;
    right: 6rpx;
    bottom: 0;
}

.shoptitle {
    font-size: 32rpx;
    padding: 20rpx 40rpx;
    font-weight: 500;
    background: #fff;
}

.nav .left {
    display: inline-block;
    width: 20%;
    height: 100%;
    background: #fff;
    text-align: center;
}

.nav .left .left-item {
    line-height: 60rpx;
    padding: 20rpx 0;
    font-size: 34rpx;
    font-weight: 300;
}

.nav .left .left-item.active {
    color: #dd2450;
}

.nav .right {
    position: absolute;
    top: 0;
    right: 10rpx;
    width: 80%;
    height: 100%;
    background: #fff;
    box-sizing: border-box;
    border-left: 1px solid #e9e9e9;
    overflow-y: auto;
}

.shopItem2 {
    display: flex;
    box-sizing: border-box;
    position: relative;
    padding: 20rpx 0 20rpx 30rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.img_wrap2 {
    width: 96rpx;
    height: 96rpx;
    background: #fff;
    display: inline-block;
}

.shopItem__info2 {
    margin-left: 20rpx;
    margin-top: 6rpx;
}

.floor-line {
    border-top: 1px solid #444;
    height: 20rpx;
    position: relative;
    width: 140rpx;
    margin: 30rpx auto 0;
}

.floor-text {
    position: absolute;
    top: -18rpx;
    background: #fff;
    left: 50%;
    padding: 0 10rpx;
    width: 60rpx;
    margin-left: -30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #444;
}