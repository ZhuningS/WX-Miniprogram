.recordList .item {
    padding: 30rpx;
    border-bottom: 1px solid #eee;
    background: #fff;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
}

.recordList .item .money {
    color: #333;
    font-size: 36rpx;
}

.recordList .item .time {
    color: #999;
}

.recordList .item .status {
    color: #ff4751;
    text-align: right;
}

.recordList .item .status.green {
    color: #05b00f;
}

.nodata {
    padding-top: 100px;
    padding-bottom: 100px;
    text-align: center;
}

.nodata .icon {
    display: block;
    width: 100%;
    height: 320rpx;
    margin-bottom: 0;
}

.nodata text {
    color: #666;
    line-height: 1;
    font-size: 28rpx;
    margin-bottom: 15px;
}

.nodata .btn-wrap {
    text-align: center;
    font-size: 15px;
    line-height: 1;
    margin-bottom: 15px;
}

.nodata .btnl {
    background-color: transparent;
    width: auto;
    line-height: 36px;
    padding: 0 37px;
    font-size: 15px;
}