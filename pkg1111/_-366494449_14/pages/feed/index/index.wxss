page {
    background: #fff;
}

.actList {
}

.actItem {
    display: flex;
    background-color: #fff;
    width: 100%;
    overflow: hidden;
    border-bottom: 1px solid #eee;
    padding: 40rpx;
}

.actItem .content {
    background: #f5f5f5;
    padding: 16rpx;
    align-items: center;
    margin-top: 10rpx;
}

.actItem .content_user {
    background: #fff;
    padding: 0;
}

.actItem .left {
    width: 160rpx;
    text-align: left;
}

.actItem .left image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 8rpx;
}

.actItem .right {
    position: relative;
    width: 100%;
    top: -8rpx;
}

.actItem .right .forward {
    position: absolute;
    right: 0;
    top: 10rpx;
    font-size: 28rpx;
    color: #004198;
}

.actItem .right .c-name {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #004198;
    font-weight: 400;
}

.actItem .right .c-name .card_name {
    font-size: 32rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.noResult {
    text-align: center;
    color: #aaa;
    padding: 30rpx 0;
    font-size: 28rpx;
    margin-top: 160rpx;
    font-weight: 300;
}

.actItem__img {
    vertical-align: top;
}

.actItem__info {
    padding: 0;
}

.actItem__title {
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
    text-align: left;
    margin-top: 10rpx;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    word-break: break-all;
}

.actItem__time {
    color: #999;
    font-size: 24rpx;
    line-height: 1;
}

.imgList {
}

.imgList image {
    width: 30%;
    vertical-align: top;
    margin-bottom: 24rpx;
    margin: 5rpx;
    height: 150rpx;
}

.actItem__img2 {
    width: 30%;
    vertical-align: top;
    margin-bottom: 24rpx;
    margin: 5rpx;
}

.content_user {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
}

.msg {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 150rpx;
    height: 86rpx;
    width: 86rpx;
    border-radius: 100%;
    background: #fff;
    font-size: 30rpx;
    right: 50rpx;
    text-align: center;
    line-height: 100rpx;
    box-shadow: 1px 3px 10px #e1e1e1;
}

.msg image {
    width: 64rpx;
    height: 64rpx;
}

.msg .redpoint {
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    border-radius: 100%;
    background: red;
    top: 0;
    right: 8rpx;
}

.comment {
    position: relative;
    background: #f3f3f5;
    padding: 16rpx;
}

.comment2 {
    position: relative;
}

.comment .zanMod view {
    font-size: 28rpx;
    color: #333;
}

.comment .zanMod text {
    color: #55669e;
    font-size: 28rpx;
}

.talkMod .nickname {
    color: #55669e;
    font-size: 28rpx;
    margin-right: 8rpx;
}

.talkMod {
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
    align-items: center;
}

.talkMod .heart {
    position: relative;
    margin-right: 10rpx;
    line-height: 100%;
}

.talkMod .heart image {
    width: 30rpx;
    height: 22rpx;
}

.talkMod view {
}

.pl-comment {
    display: flex;
    position: absolute;
    right: 0;
    top: -80rpx;
    width: 300rpx;
    text-align: right;
    height: 80rpx;
    overflow: hidden;
    align-items: center;
}

.pl-comment-right image {
    width: 48rpx;
    height: 36rpx;
}

.pl-comment-body .btn image {
    width: 36rpx;
    height: 36rpx;
}

.dz_btn {
    display: flex;
    position: absolute;
    right: -260rpx;
    width: 260rpx;
    background: #4b5053;
    border-radius: 8rpx;
    z-index: 10;
    padding: 16rpx;
    font-size: 32rpx;
    color: #fff;
    transition: all .1s;
    overflow: hidden;
}

.dz_btnShow {
    width: 250rpx;
    right: 50rpx;
    padding: 16rpx;
}

.dz_btn .btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dz_btn .btn image {
    margin-right: 10rpx;
}

.dz_btn .btn text {
    font-size: 28rpx;
    white-space: nowrap;
}

.pl-comment-right {
    position: absolute;
    right: 0;
}

.keyboard {
    width: 100%;
    border-top: 1px solid #e1e1e1;
    position: fixed;
    bottom: 0;
    right: 0;
    z-index: 10000;
    background-color: #f5f5f6;
    padding: 20rpx 20rpx 20rpx;
    display: flex;
}

.keyboard input {
    height: 80rpx;
    border: 1px solid #e1e1e1;
    border-radius: 8rpx;
    font-size: 32rpx;
    padding-left: 8rpx;
    flex: 1;
    background: #fff;
}

.keyboard .send {
    width: 160rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #fff;
    padding: 0;
    background-color: #3479f5;
    margin-left: 10rpx;
    border-radius: 8rpx;
}

.gs {
    font-size: 20rpx;
    color: #959595;
    height: 30rpx;
    border: 1px solid #959595;
    padding: 0px 6rpx;
    border-radius: 6rpx;
    margin-left: 16rpx;
}

.imgList .oneImage {
    width: 50%;
}

.videoWrap {
    position: relative;
    font-size: 0;
}

.videoWrap .play {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 88rpx;
    height: 84rpx;
    margin-left: -44rpx;
    margin-top: -42rpx;
}

.videoWrap .play image {
    width: 88rpx;
    height: 84rpx;
}