page {
}

.search_mod {
    display: flex;
    background: #fff;
    padding: 20rpx;
    align-items: center;
}

.search_mod .text {
    font-size: 28rpx;
    color: #333;
}

.search_bar {
    display: flex;
    color: #bbb;
    border-radius: 50rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #f5f5f5;
    flex: 1;
    margin-right: 30rpx;
    width: 490rpx;
    padding: 0 6rpx 0 30rpx;
    align-items: center;
}

.search_bar image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
}

.search_bar input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.history {
    min-height: 200rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
    background: #fff;
}

.history .last {
    position: relative;
    padding: 30rpx 0;
    display: flex;
    align-items: center;
}

.history .last text {
    font-size: 28rpx;
}

.history .last .delete {
    position: absolute;
    right: 30rpx;
    width: 28rpx;
    height: 28rpx;
}

.history_list .item {
    border-bottom: 1px solid #eee;
    color: #666;
    padding: 20rpx 0;
}

.noResult {
    text-align: center;
    color: #aaa;
    padding: 30rpx 0;
    font-size: 28rpx;
    margin-top: 180rpx;
    font-weight: 300;
}

.label_discount {
    width: 112rpx;
    font-size: 22rpx;
    color: #ff4751;
    border-radius: 4rpx;
    text-align: center;
    border: 1px solid #ff4751;
    padding: 2rpx 0;
}

@import "../index.wxss";