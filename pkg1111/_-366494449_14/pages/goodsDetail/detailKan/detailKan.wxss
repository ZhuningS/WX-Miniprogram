@import "../detailMs/index.wxss";

.price-right {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-left: 24rpx;
}

.oldprice {
    margin-left: 0;
    width: 100%;
}

.progress-wrapper {
    width: 150rpx;
    height: 30rpx;
    font-size: 20rpx;
    color: #ff4751;
    text-align: center;
    position: relative;
    line-height: 30rpx;
    border-radius: 15rpx;
    background: #fff;
}

.progress-bg {
    position: absolute;
    top: 0;
    left: 0;
    height: 30rpx;
    background: #eff697;
    border-radius: 15rpx;
}

.goodsSaleWrap {
    align-items: center;
    height: 112rpx;
}

.goods-detail-title {
    border-bottom: 2rpx solid #eee;
}

.process {
    height: 160rpx;
    width: 100%;
    font-size: 24rpx;
    padding: 40rpx 0;
}

.process-bar {
    width: 150rpx;
    border-bottom: 4rpx solid #f0f0f0;
}

.process-dot {
    width: 40rpx;
    height: 40rpx;
    position: relative;
}

.process-dot image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.process-dot text {
    position: absolute;
    top: 0;
    left: 0;
    color: #fff;
    font-size: 24rpx;
    display: block;
    width: 100%;
    height: 100%;
    text-align: center;
    line-height: 40rpx;
    z-index: 2;
}

.process-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
}

.process-cont>view {
    margin-right: 94rpx;
}