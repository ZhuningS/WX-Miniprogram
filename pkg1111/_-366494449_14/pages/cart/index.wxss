@import "../../__wuBaseWxss__/0.wxss";

.wrap {
    padding-bottom: 120rpx;
}

.wrap .copyright {
    bottom: 100rpx;
}

.link_login {
    display: inline-block;
    vertical-align: middle;
}

.contant {
    display: flex;
    padding: 30rpx 20rpx;
    background-color: #fff;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #f5f5f5;
}

.cart-checked {
    width: 85rpx;
    line-height: 160rpx;
    text-align: center;
}

.cart-checked .btn {
    height: 100%;
    padding-left: 20rpx;
}

.cart-checked image {
    width: 36rpx;
    height: 36rpx;
}

.cart-list {
    flex: 1;
    display: flex;
    padding-bottom: 20rpx;
    margin-left: 20rpx;
}

.order-img {
    width: 150rpx;
}

.order-img image {
    width: 150rpx;
    height: 150rpx;
}

.cart-info {
    flex: 1;
}

.cart-del {
    width: 150rpx;
    height: 150rpx;
}

.order-name {
    width: 360rpx;
    margin-left: 24rpx;
    text-overflow: ellipsis;
    font-size: 26rpx;
    color: #444;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 42rpx;
    height: 84rpx;
    margin-bottom: 6rpx;
}

.order-name text {
    color: #666;
    font-size: 26rpx;
}

.order-sku {
    line-height: 16px;
    margin-left: 24rpx;
    margin-bottom: 16rpx;
    min-height: 32px;
}

.order-sku text {
    color: #999;
    font-size: 12px;
}

.my-bnt {
    margin-left: 24rpx;
}

.bnt {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 1px solid #eee;
    text-align: center;
    vertical-align: bottom;
}

.my-bnt text {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    text-align: center;
}

.my-bnt input {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    font-size: 24rpx;
    text-align: center;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    vertical-align: bottom;
    outline: none;
    -webkit-appearance: none;
    border-radius: 0;
}

button.del-img {
    height: 50rpx;
    text-align: center;
    margin-bottom: 30rpx;
}

.order-price {
    color: #ff7c42;
    text-align: center;
}

.order-price text {
    font-size: 30rpx;
}

.del-img image {
    width: 50rpx;
    height: 50rpx;
}

.footer {
    flex: 1;
    width: 100%;
    display: flex;
    height: 100rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
}

.footer-checked-wrap {
    width: 165rpx;
}

.footer-cart-checked {
    display: inline-block;
    width: 85rpx;
    text-align: center;
    line-height: 100rpx;
}

.footer-cart-checked image {
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
}

.footer-checked-wrap .all-select {
    display: inline-block;
    line-height: 100rpx;
    text-align: left;
}

.all-select text {
    font-size: 14px;
    color: #313131;
    vertical-align: middle;
}

.other {
    flex: 1;
    display: flex;
    align-items: center;
}

.other .total-price {
    flex: 1;
    text-align: right;
}

.total-price text {
    font-size: 28rpx;
    color: #444;
    vertical-align: middle;
}

.other .button {
    width: 220rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #ff7c42;
    margin-left: 20rpx;
}

.button text {
    font-size: 32rpx;
    color: #fff;
}

.empty {
    width: 100%;
    height: 400rpx;
    padding-top: 200rpx;
}

.empty .img-wrap {
    width: 250rpx;
    height: 250rpx;
    margin: 0 auto;
}

.empty image {
    width: 250rpx;
    height: 250rpx;
}

.text-wrap {
    text-align: center;
    margin-top: 20rpx;
    font-size: 14px;
    color: #999;
}

.disabled {
    background-color: #eee;
}

.cart-shopname {
    display: flex;
    flex: 1;
    background: #fff;
    border-bottom: 1px solid #eee;
    padding: 20rpx 0;
    font-size: 26rpx;
    color: #999;
}