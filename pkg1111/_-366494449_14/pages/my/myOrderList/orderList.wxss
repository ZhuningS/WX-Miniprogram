@import "../../../__wuBaseWxss__/0.wxss";

.wrap {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.wrap .copyright {
    position: static;
}

.tabs {
    display: flex;
    flex-direction: column;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.navs {
    background-color: #fff;
    display: flex;
    padding: 0 25rpx;
    width: 100%;
}

.navs .nav__item {
    display: flex;
    color: #313131;
    flex: 1;
    text-align: center;
    line-height: 80rpx;
    height: 80rpx;
    justify-content: center;
    align-items: center;
}

.navs .nav__item.selected {
    color: #e53947;
}

.nav__item .btn {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    text-align: center;
}

.navs .nav__item.selected .btn {
    border-bottom: 2px solid #e53947;
    color: #e53947;
}

.tab-content-list {
    flex: 1;
    position: relative;
}

.tab-content {
    position: absolute;
    width: 100%;
    height: 100%;
}

.tab-content scroll-view {
    height: 100%;
}

.order-list {
    padding-bottom: 10px;
}

.order-item {
    background-color: #fff;
    padding: 0 30rpx;
    margin-top: 10px;
}

.order-item .top-info {
    height: 36px;
    line-height: 35px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.order-item .top-info .date {
    color: #666;
}

.top-info text {
    font-size: 26rpx;
}

.order-item .date label {
    color: #999;
}

.order-item .state {
    color: #e53947;
}

.order-item .state.cancel {
    color: #999;
}

.order-item .order-info {
    background: #fafafa;
    padding: 10px 0;
    position: relative;
    display: flex;
}

.order-info .bg-img {
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border: 1px solid #eee;
}

.order-info .order-r {
    flex: 1;
}

.order-r text {
    font-size: 26rpx;
}

.order-r .label-text {
    margin-bottom: 20rpx;
    line-height: 30rpx;
}

.label-text label {
    margin-right: 10rpx;
    color: #999;
}

.label-text text {
    color: #999;
}

.label-text text.price {
    color: #313131;
    line-height: 38rpx;
}

.order-r .label-text.label-text_qc {
    margin-bottom: 16rpx;
}

.label-text_qc .textTitle {
    color: #333;
    font-size: 28rpx;
}

.label-text_qc .textVal {
    color: #000;
    font-size: 36rpx;
    font-weight: bold;
}

.order-item .order-info dl {
    color: #999;
    line-height: 24px;
    width: 70%;
}

.order-item .order-info dl .price {
    color: #313131;
}

.order-item .order-info dl .price i {
    margin-right: 5px;
}

.order-item .order-info dl .price b {
    font-weight: normal;
}

.order-item .order-info dl dt {
    margin-right: 10px;
    float: left;
    clear: left;
}

.order-item .order-info dl dd {
    float: left;
    clear: right;
}

.order-item .btn-wrap {
    text-align: right;
    padding: 10px 3.22580645% 10px 0;
}

.order-item .btnl {
    line-height: 25px;
    padding: 0 8px;
    font-size: 12px;
    width: auto;
}

.order-item .icon-arrow {
    position: absolute;
    right: 3.22580645%;
    top: 50%;
    margin-top: -6px;
}

.nodata {
    padding-top: 100px;
    padding-bottom: 100px;
    text-align: center;
}

.nodata .icon {
    display: block;
    width: 100%;
    height: 240rpx;
    margin-bottom: 0;
}

.nodata text {
    color: #999;
    line-height: 1;
    font-size: 24rpx;
    margin-bottom: 15px;
}

.nodata .btn-wrap {
    text-align: center;
    font-size: 15px;
    line-height: 1;
    margin-bottom: 15px;
}

.nodata .btnl {
    background-color: transparent;
    width: auto;
    line-height: 36px;
    padding: 0 37px;
    font-size: 15px;
}

.more-loading {
    display: flex;
    padding: 20rpx;
    justify-content: center;
}

.more-loading text {
    color: #666;
}

.btn-order {
    text-align: center;
    padding: 10rpx 10rpx;
    border-radius: 36rpx;
    border: 1px solid #eee;
    color: #666;
    width: 140rpx;
    margin-left: 20rpx;
}

.btn-order-primary {
    color: #e53947;
    border: 1px solid #e53947;
}

.order-options {
    padding: 10rpx 0 20rpx;
    display: flex;
    width: 100%;
    justify-content: flex-end;
}

.order-priceInfo {
    padding: 20rpx 0;
    width: 100%;
    text-align: right;
}

.order-info .bg-img image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 6rpx;
}