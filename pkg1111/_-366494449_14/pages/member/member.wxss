page {
    padding-bottom: 100rpx;
}

.bg {
    position: relative;
    background: url("https://img.weixin.sundayer.cn/memberbg@2x.png") no-repeat;
    background-size: 100%;
    height: 300rpx;
}

.memberCard {
    position: absolute;
    top: 50rpx;
    width: 650rpx;
    height: 324rpx;
    background-repeat: no-repeat;
    background-size: 100%;
    left: 50%;
    margin-left: -325rpx;
}

.logo {
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
    background-color: #eee;
    border: 2rpx solid #fff;
}

.cardInfo {
    margin-left: 20rpx;
}

.cardName {
    font-size: 36rpx;
    color: #fff;
    line-height: 40rpx;
}

.memberlevel {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 670rpx;
    height: 80rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -335rpx;
    border-radius: 24rpx 24rpx 0 0;
    background-image: -webkit-linear-gradient(0deg,#E2E9F1,#AFB8C5);
    padding: 0 30rpx;
}

.level1 {
    background-image: -webkit-linear-gradient(0deg,#F1D8A0,#D0A75D)!important;
    border-radius: 20rpx;
}

.memberlabel {
    display: flex;
    align-items: center;
    padding: 0 10rpx;
    color: #fff;
    font-size: 24rpx;
    font-weight: 300;
    background: rgba(00,00,00,.2);
    border-radius: 50rpx;
    line-height: 38rpx;
    text-align: center;
    margin-top: 10rpx;
    white-space: nowrap;
}

.memberform {
    width: 690rpx;
    border-radius: 16rpx;
    background: #fff;
    margin: 100rpx auto 0;
    min-height: 500rpx;
    padding: 40rpx;
}

.memberform .title {
    text-align: center;
    font-weight: 500;
}

.btn-form {
    width: 600rpx;
    height: 80rpx;
    background: #3AAF49;
    border-radius: 8rpx;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    margin-top: 40rpx;
}

.form__item {
    padding: 20rpx 0;
}