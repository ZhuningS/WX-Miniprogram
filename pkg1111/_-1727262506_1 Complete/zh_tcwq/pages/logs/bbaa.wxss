page {
    background-color: white;
}

.main {
    width: 100%;
    height: 100vh;
    position: relative;
}

.bgimg {
    width: 100%;
    height: 100%;
    display: block;
}

.headwz {
    position: absolute;
    top: 4%;
    left: 50%;
    transform: translateX(-50%);
    font-size: 35rpx;
    color: #333;
}

.login {
    position: absolute;
    width: 86%;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
}

.weui-cells {
    padding: 100rpx 50rpx;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    background: #fff;
}

.weui-cells:before {
    border-top: none;
}

.weui-cells:after {
    border-bottom: none;
}

.weui-cell {
    font-size: 30rpx;
    padding: 20rpx 0 0;
}

.weui-cell_input {
    padding-top: 20rpx;
}

.weui-label {
    width: 70rpx;
    height: 2.58823529em;
    display: flex;
    align-items: center;
}

.weui-label image {
    width: 35rpx;
    height: 40rpx;
}

.weui-btn {
    margin-top: 0;
    font-size: 35rpx;
}

button {
    line-height: 2.8;
    border-radius: 0;
    border-bottom-left-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
}

button::after {
    border: none;
}

.hdimg {
    width: 200rpx;
    height: 200rpx;
    top: 18%;
    left: 50%;
    margin-left: -100rpx;
    z-index: 1000;
    border-radius: 50%;
    border: 4rpx solid #ccc;
}

.weixin {
    width: 100%;
    height: 76rpx;
    position: absolute;
    bottom: -120rpx;
    background: #fff;
    font-size: 24rpx;
    color: #1ea838;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx solid #1ea838;
    border-radius: 15rpx;
}

.weixin text {
    padding: 25rpx 80rpx;
    background: #ed414a;
    border-radius: 15rpx;
    color: #1ea838;
}

.weixin image {
    margin: 0 20rpx 0 -20rpx;
    width: 50rpx;
    height: 50rpx;
}

.ft {
    width: 100%;
    position: absolute;
    top: 90%;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.ft image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.resite {
    width: 90%;
    height: 540rpx;
    background: #fff;
    position: absolute;
    top: 24%;
    left: 5%;
    box-shadow: 0px 0px 15px #888888;
    display: flex;
    justify-content: center;
    border-bottom: none!important;
}

.resite>view:nth-child(1) {
    width: 90%;
    height: 240rpx;
}

.resite button {
    position: absolute;
    bottom: -10rpx;
    height: 80rpx;
    width: 100%;
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    background: #42a6f7;
    border-radius: 15rpx;
}

.resite_one {
    width: 100%;
    height: 120rpx;
    border-bottom: 1rpx solid #e5e5e5;
    box-sizing: border-box;
    position: relative;
}

.text {
    position: absolute;
    bottom: 20rpx;
    width: 100%;
    height: 50rpx;
}

.text>view:nth-child(1) {
    width: 15%;
    height: 100%;
    float: left;
}

.text>view:nth-child(2) {
    width: 85%;
    height: 100%;
    background: #fff;
    float: left;
}

.text input {
    width: 90%;
    height: 100%;
    margin: 0 auto 0;
    font-size: 30rpx;
}

.text image {
    width: 29rpx;
    height: 33rpx;
}

.werchat {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 45465456;
}

.werchat>view:nth-child(1) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: .5;
}

.werchat>view:nth-child(2) {
    position: absolute;
    width: 75%;
    height: 270rpx;
    background: #fff;
}

.werchat>view view:nth-child(1) {
    width: 95%;
    height: 170rpx;
    margin: 0 auto 0;
    padding-top: 20rpx;
    color: #333;
    text-align: center;
    font-size: 28rpx;
}

.text1 text {
    line-height: 50rpx;
    display: block;
    width: 100%;
    height: 80rpx;
}

.werchat>view view:nth-child(2) {
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #e5e5e5;
}

.text2 text {
    display: inline-block;
    text-align: center;
    width: 50%;
    height: 100%;
    box-sizing: border-box;
    line-height: 80rpx;
    font-size: 26rpx;
}

.text2 text:nth-child(1) {
    border-right: 1rpx solid #e5e5e5;
}