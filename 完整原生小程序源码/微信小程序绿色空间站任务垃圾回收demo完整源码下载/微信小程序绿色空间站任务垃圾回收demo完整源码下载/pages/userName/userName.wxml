<view class="page">
    <view class="page__bd">
        <form bindsubmit="submitForm">
            <view class="weui-cells weui-cells_after-title" style="margin-top: 10px;">
                <view class="weui-cell weui-cell_input">
                    <view class="weui-cell__hd">
                        <view class="weui-label">手机号码</view>
                    </view>
                    <view class="weui-cell__bd">
                        <input name="phone" value="{{ form.phone }}" class="weui-input" type="tel" placeholder="请输入确认的手机号码" />
                    </view>
                </view>
            </view>
            <view class="" style='padding: 10px;'>

                <button class="weui-btn" style='background: #27ccaa; color: #fff;' formType="submit">提交</button>
            </view>
        </form>
    </view>
</view>