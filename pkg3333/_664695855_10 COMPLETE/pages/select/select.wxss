.select {
    padding: 0 30rpx 20rpx 30rpx;
    border-bottom: 1px solid #eee;
}

.select-input {
    border-radius: 40rpx;
    height: 33px;
    background-color: #f0f0f0;
    position: relative;
    float: left;
    width: 78%;
}

.select-icon {
    width: 16px;
    height: 16px;
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
}

.select-input-style {
    position: absolute;
    left: 30px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 14px;
    width: 70%;
}

.close-icon {
    width: 18px;
    height: 18px;
    position: absolute;
    top: 50%;
    right: 10rpx;
    transform: translateY(-50%);
}

.select-btn {
    float: right;
    width: 20%;
    height: 33px;
    line-height: 33px;
    border-radius: 40rpx;
    color: #fff;
    background: #ff6900;
    font-size: 14px;
}

.select-btn::after {
    border: 0;
}

.select-btn-hover {
    background: #de5d03;
}

.content {
    padding: 45rpx 30rpx 0 30rpx;
}

.content-title {
    font-size: 14px;
    color: #858585;
    margin-bottom: 20rpx;
}

.content-box-label {
    display: block;
    max-width: 60px;
    height: 30px;
    border-radius: 10rpx;
    padding: 0 10px;
    background: #f4f4f4;
    font-size: 10px;
    text-align: center;
    line-height: 30px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 10px;
    color: #333;
    float: left;
    margin-bottom: 10px;
}