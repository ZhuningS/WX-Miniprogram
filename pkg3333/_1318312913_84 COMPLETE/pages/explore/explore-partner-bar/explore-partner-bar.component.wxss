.animated {
    animation-duration: 318ms;
    animation-fill-mode: forwards;
}

@-webkit-keyframes slideInRight {
    from {
        transform: translate3d(100%,0,0);
        visibility: visible;
    }

    to {
        transform: translate3d(0,0,0);
    }
}

@keyframes slideInRight {
    from {
        transform: translate3d(100%,0,0);
        visibility: visible;
    }

    to {
        transform: translate3d(0,0,0);
    }
}

.slideInRight {
    animation-name: slideInRight;
}

@-webkit-keyframes slideOutRight {
    from {
        transform: translate3d(0,0,0);
    }

    to {
        visibility: hidden;
        transform: translate3d(100%,0,0);
    }
}

@keyframes slideOutRight {
    from {
        transform: translate3d(0,0,0);
    }

    to {
        visibility: hidden;
        transform: translate3d(100%,0,0);
    }
}

.slideOutRight {
    animation-name: slideOutRight;
}

.explore-partner-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 10000;
    top: 20px;
    right: 0;
    height: 40px;
    background-color: #FFFFFF;
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

.explore-partner-bar .hopCard-image {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    margin-left: 10px;
}

.explore-partner-bar .hopCard-title {
    font-size: 12px;
    line-height: 1;
    margin-top: 1px;
    margin-left: 10px;
    margin-right: 10px;
}