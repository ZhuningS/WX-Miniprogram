page {
    margin-bottom: 60px;
}

.products-items {
    margin: 20px 40rpx 20px 60rpx;
    display: flex;
    flex-wrap: wrap;
}

.products-items .product-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    height: 70px;
    width: 305rpx;
    margin-right: 20rpx;
    border: 1px rgba(0,0,0,0.05) solid;
}

.products-items .item-selected {
    border-color: #48545c;
    background-color: rgba(0,0,0,0.05);
}

.products-items .items1 {
    width: 630rpx;
}

.products-items .items3 {
    width: 196rpx;
}

.order-items {
    margin: 20px 60rpx;
}

.order-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
}

.order-item:last-of-type {
    margin-bottom: 0;
}

.order-item .action,.order-item .name,.order-item .price {
    display: inline-block;
    font-size: 14px;
    line-height: 20px;
    font-weight: bold;
}

.order-item .name {
    flex-grow: 1;
    max-height: 40px;
}

.order-item .action {
    font-weight: 300;
    border-bottom: 1px dotted #000000;
}

.order-item .caption {
    padding: 5px 5px 5px 0;
}

.order-item .preview {
    max-height: 75px;
    overflow: hidden;
}

.pay-ctn {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 750rpx;
    background-color: white;
    border-top: 1px rgba(0,0,0,0.05) solid;
}

.pay-ctn .order-item {
    flex-grow: 1;
    padding: 0 10px 0 60rpx;
}

.pay-ctn .button {
    height: 60px!important;
    line-height: 60px!important;
}