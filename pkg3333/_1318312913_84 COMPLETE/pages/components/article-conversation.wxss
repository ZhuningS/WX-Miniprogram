.share_notification_avatar {
    margin-right: 10px;
    height: 20px;
    width: 20px;
    flex-shrink: 0;
    border-radius: 50%;
}

.share_notification_message {
    color: #FFFFFF;
    font-size: 13px;
    margin-right: 18px;
    line-height: 1.5;
}

.fake_compose_bar {
    background-color: #FFFFFF;
    height: 50px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 15px;
    padding-left: 20px;
    box-sizing: border-box;
}

.share_compose_message {
    color: #CCCCCC;
    font-size: 13px;
}

.float_button {
    color: #FFFFFF;
    border-radius: 25px;
    background-color: #000000;
    height: 50px;
    width: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 10px rgba(0,0,0,0.1),0 20px 20px rgba(0,0,0,0.05);
}

.float_bar {
    padding: 0 15px;
    border-radius: 25px;
    background-color: #000000;
    color: #FFFFFF;
    height: 50px;
    width: auto;
    font-size: 14px;
    line-height: 1.5;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 10px rgba(0,0,0,0.1),0 20px 20px rgba(0,0,0,0.05);
}

.float_bar.white {
    background: #FFFFFF;
    color: black;
}

.topic-button {
    position: absolute;
    bottom: 0;
    left: 15px;
}

.topic-button.with-discuss {
    display: none;
    left: auto;
    right: 75px;
}

.article-share-button {
    position: absolute;
    bottom: 0;
    right: 75px;
}

.message {
    background-color: #FFFFFF;
    width: 100%;
    padding: 20px;
    box-sizing: border-box;
    margin: 60rpx 0;
    display: flex;
}

.notification-bar .message {
    border-radius: 27px;
    background-color: black;
    margin: 0;
    position: absolute;
    bottom: 0;
    left: 15px;
    height: 50px;
    width: auto;
    min-width: 50px;
    display: flex;
    align-items: center;
    box-shadow: 0 0 5px rgba(0,0,0,0.1),0 10px 10px rgba(0,0,0,0.05);
    max-width: 50%;
    z-index: 20;
}

.notification_bar_message {
    padding: 0 20px;
    box-sizing: border-box;
}

.notification_bar_message .event-card {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #FFFFFF;
}

.notification-bar .mask {
    position: absolute;
    left: 0;
    height: 100%;
    width: 100%;
}

.conversation_list_container {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    height: 100%;
    padding: 60rpx;
    box-sizing: border-box;
}

.conversation_list_bottom_panel {
    display: flex;
    width: 630rpx;
    position: absolute;
    flex-direction: column;
    margin: 0 60rpx;
    height: 153px;
    bottom: 0;
    justify-content: center;
    align-items: center;
}

.progress-dot,.progress-dot-other {
    height: 4px;
    width: 2px;
    background-color: #FFDD00;
    position: absolute;
    bottom: 0px;
}

.progress-dot-other {
    background-color: #EBEBEB;
}

.progress-bar {
    background-color: #FFFFFF;
    position: relative;
    width: 100%;
    height: 30px;
    z-index: 1;
}

.progress-bar .user-avatar-progress {
    height: 20px;
    width: 20px;
    border-radius: 50%;
    position: absolute;
    left: 24px;
    top: 6px;
}

.nux-conversation {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.2);
    z-index: 3;
    font-size: 26rpx;
}

.share_card {
    background-color: white;
    position: absolute;
    left: 80rpx;
    right: 80rpx;
    top: 80rpx;
    bottom: 80rpx;
    padding: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.share_card .avatar {
    border-radius: 50%;
    width: 60px;
    height: 60px;
    flex-shrink: 0;
}

.share_card .desc {
    margin-bottom: 20px;
    font-size: 12px;
    font-weight: 300;
    color: #BDBDBD;
    text-align: center;
    flex-shrink: 0;
}

.share_card .title {
    font-weight: bold;
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 20px;
    max-height: 48px;
    overflow: hidden;
    text-align: center;
    flex-shrink: 0;
}

.share_card .button {
    font-size: 14px;
    display: flex;
    align-items: center;
    align-self: stretch;
    justify-content: center;
    height: 40px;
    color: white;
    background-color: #000000;
    flex-shrink: 0;
}

.share_card .snippet_container {
    text-align: center;
    max-height: 120px;
    overflow: hidden;
    margin-bottom: 20px;
}

.share_card image {
    width: 100%;
    height: 300rpx;
    margin-bottom: 20px;
}

.share_card .paragraph__text {
    font-size: 16px;
    line-height: 24px;
    color: #000000;
    margin: 0;
}

.share_card .paragraph__text {
    color: #999999;
}

.share_card .text__meta {
    text-align: center;
}

.auth_card {
    background-color: white;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 40%;
    padding: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.auth_card .button {
    font-size: 14px;
    display: flex;
    align-items: center;
    align-self: stretch;
    justify-content: center;
    height: 40px;
    margin: 24px;
    color: #FFFFFF;
    background-color: #000000;
}