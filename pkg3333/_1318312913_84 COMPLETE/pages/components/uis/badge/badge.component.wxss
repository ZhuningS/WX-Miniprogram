.badge {
    display: inline-flex;
    align-items: center;
    line-height: 20px;
    box-sizing: border-box;
    font-family: Helvetica Neue,Helvetica,Open Sans;
}

.badge .badge-info {
    line-height: 1;
}

.badge.theme-dot {
    display: inline-block;
    line-height: 16px;
    min-width: 20px;
    height: 20px;
    padding: 0 3px;
    font-size: 12px!important;
    text-align: center;
    background-color: #000000;
    border: 2px solid #FFFFFF;
    border-radius: 10px;
    color: #FFFFFF;
    opacity: 0.9;
}

.badge.number-unit {
    font-size: 10px;
}

.badge.number-ten,.badge.number-hundred {
    margin-top: -0.03em;
    font-size: 8px;
}

.badge.number-hundred {
    letter-spacing: -0.06em;
}