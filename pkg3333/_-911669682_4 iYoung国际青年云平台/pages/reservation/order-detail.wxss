@import "../../__wuBaseWxss__/2.wxss";

page {
    font-size: 32rpx;
}

image {
    width: 100%;
    height: 100%;
}

image.circle {
    border-radius: 50%;
}

.red {
    color: #f66;
}

.order-msg {
    background: #fff;
    padding: 30rpx;
    border-radius: 12rpx;
}

.sever-tit {
    align-items: center;
    margin-bottom: 20rpx;
}

.sever-titimg {
    width: 50rpx;
    height: 50rpx;
}

.sever-state {
    justify-content: flex-end;
}

.order-item {
    padding: 20rpx 30rpx;
    background: #f9f9f9;
}

.order-item:nth-child(n+2) {
    margin-top: 2px;
}

.sever-img {
    width: 120rpx;
    height: 120rpx;
}

.sever-info {
    justify-content: space-between;
}

.sever-name {
    line-height: 40rpx;
}

.sever-price {
    display: flex;
    justify-content: space-between;
}

.order-msg-item {
    padding: 10rpx 0;
    line-height: 1.4;
}

.more-order-item {
    text-align: center;
    position: relative;
}

.more-order-item::after {
    content: '';
    display: inline-block;
    width: 6px;
    height: 6px;
    border-top: 1px solid #ccc;
    border-right: 1px solid #ccc;
    margin-left: 10rpx;
    transform: rotate(135deg) scale(0.9);
}

.more-order-item.active::after {
    transform: rotate(-45deg) scale(0.9);
}

.order-img {
    width: 132rpx;
    height: 132rpx;
    border-radius: 6rpx;
    overflow: hidden;
    display: inline-block;
    vertical-align: bottom;
    margin-bottom: 10rpx;
    margin-right: 10rpx;
}

.order-img:last-child {
    margin-right: 0;
}

.fixed-btn-box {
    height: 92rpx;
    margin-top: 20rpx;
}

.fixed-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.fixed-btn button {
    border-radius: 0;
}

.fixed-btn button::after {
    border: none;
}