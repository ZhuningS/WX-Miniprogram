.peo-content {
    padding-bottom: 80rpx;
}

.people-list {
    padding: 30rpx 40rpx;
    background: #fff;
}

.peo-img {
    width: 80rpx;
    height: 80rpx;
}

.peo-name {
    line-height: 40rpx;
}

.peo-img image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.peo-msg {
    line-height: 80rpx;
}

.btn {
    width: 750rpx;
    position: fixed;
    bottom: 0;
    left: 0;
}

.btn button {
    border-radius: 0;
}