.userInfo {
    width: 750rpx;
    position: relative;
    padding-bottom: 70rpx;
}

.btn-send {
    display: inline-block;
    width: 180rpx;
    font-size: 12px;
    height: 30px;
    line-height: 30px;
    background: rgba(0,0,0,0.5);
    border-radius: 30rpx;
    margin-top: 26rpx;
}

.userInfo-bottom {
    padding: 60rpx 30rpx;
}

.user-img {
    display: inline-block;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 6rpx solid #fff;
    vertical-align: bottom;
}

.user-img image {
    width: 100%;
    height: 100%;
}

.active-box {
    background: #fff;
    width: 690rpx;
    padding: 50rpx;
    border-radius: 20rpx;
    margin: 0 auto;
    margin-top: -70rpx;
    margin-bottom: 40rpx;
    position: relative;
    word-break: break-all;
}

.active-title {
    font-weight: bold;
    padding-bottom: 20rpx;
}

.active-content {
    padding-bottom: 30rpx;
}

.content-list {
    padding: 20rpx 0;
}

.peo-msg {
    padding: 10rpx 0;
    padding-right: 50rpx;
}

.peo-msg image {
    vertical-align: middle;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    border: 6rpx solid #fff;
    margin-right: -24rpx;
}

.content-list .arrowR::before {
    right: 0;
}

.bottom-btn {
    width: 80%;
    margin: 20rpx auto;
}

.bottom-btn .btn-list {
    border-radius: 40rpx;
}

.flex>.address-padding-right {
    padding-right: 30rpx;
}

.btn-list.baoming {
    border: none;
}

