.content {
    background: #fff;
}

.porwer {
    line-height: 60rpx;
    padding: 20rpx 30rpx;
    background: #fff;
}

.tips {
    margin: 10rpx 30rpx 20rpx;
}

.content .list {
    padding: 20rpx 40rpx;
    background: #fff;
}

.list-title {
    width: 160rpx;
}

.list textarea {
    padding: 6rpx 0;
    height: 140rpx;
}

.picker {
    display: inline-block;
    padding-left: 30rpx;
    line-height: 40rpx;
}

.tip-time {
    padding-right: 30rpx;
}

.tip-time.arrowR::before {
    right: 0;
}

.invite-img {
    width: 56rpx;
    height: 56rpx;
    vertical-align: middle;
    border-radius: 2rpx;
}

.switch-left {
    line-height: 64rpx;
}

.msg-list {
    display: inline-block;
    padding: 0 20rpx;
    line-height: 60rpx;
    margin-right: 20rpx;
    border-radius: 4rpx;
}

.msg-list:last-child {
    margin: 0;
}

label.checkbox {
    width: 210rpx;
    display: inline-block;
    vertical-align: top;
    margin-top: 10rpx;
    margin-right: 20rpx;
}

label.checkbox:nth-child(3n+3) {
    margin-right: 0;
}

page .wx-checkbox-input {
    width: 36rpx;
    height: 36rpx;
}

.btn {
    width: 600rpx;
    margin: 40rpx auto;
    font-size: 32rpx;
}