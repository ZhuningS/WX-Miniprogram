@import "../../../__wuBaseWxss__/3.wxss";

.detail-content {
    background: #fff;
    padding: 30rpx;
}

.text-content {
    word-break: break-all;
}

.uesrinfo {
    line-height: 50rpx;
}

.user-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}

.user-name {
    max-width: 280rpx;
}

.notice-detail-user .del {
    width: 50rpx;
}

.vote-image,.vote-image image {
    width: 100%;
}

.vote-choose {
    background: #fff;
    padding: 0 30rpx;
}

.vote-list {
    padding: 30rpx 0;
}

.pho-list {
    display: inline-block;
    width: 330rpx;
    vertical-align: top;
}

.pho-list:nth-child(2n+2) {
    margin-right: 0;
}

.choose-img {
    width: 330rpx;
    height: 330rpx;
}

.choose-img image {
    width: 100%;
    height: 100%;
}

.radio-text {
    line-height: 80rpx;
    background: rgba(0,0,0,0.05);
    padding: 0 20rpx;
}

.people-look {
    width: 710rpx;
    margin: 20rpx auto;
}

.btn {
    margin: 60rpx auto;
}

.btn button {
    width: 280rpx;
    line-height: 72rpx;
    height: 72rpx;
    border-radius: 40rpx;
    margin: auto;
}

button.create {
    border: 2rpx solid;
    background: rgba(255,255,255,0.6);
}

button.create:active {
    background: #fff;
}

.vote-list progress {
    width: 100px;
}

.vote-list image {
    width: 80rpx;
    height: 80rpx;
    margin: 10rpx 20rpx;
    margin-left: 0;
}

.vote-btn {
    width: 100%;
    margin: 15rpx 80rpx 0 80rpx;
}