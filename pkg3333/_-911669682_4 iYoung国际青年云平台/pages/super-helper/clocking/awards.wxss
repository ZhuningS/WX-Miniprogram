page {
    background: #fff;
}

.day {
    width: 260rpx;
    padding: 40rpx;
    margin: 20rpx auto;
    border-radius: 30rpx;
    border: 2rpx dashed #09bb07;
}

.day text {
    display: block;
    line-height: 60rpx;
}

.day .now-day {
    font-size: 54rpx;
    line-height: 68rpx;
}

swiper {
    width: 750rpx;
    height: 40vh!important;
    padding: 30rpx 0;
    margin-top: 100rpx;
    position: relative;
}

swiper .slide-image {
    width: 680rpx;
    height: 100%;
    position: absolute;
    top: 0;
    left: 30rpx;
}

.jiang-content {
    width: 500rpx;
}

.swiper-text {
    font-size: 44rpx;
    line-height: 96rpx;
}