<view class="user-info tc bgwhite mb10">
    <view class="user-container">
        <image class="avatar" src="{{headimgurl}}"></image>
        <view class="nickname mt10">{{nickname}}</view>
    </view>
    <view class="flex mt20">
        <view class="sub gridYr">
            <view class="title">发表数</view>
            <view class="remark">{{info_count}}</view>
        </view>
        <view class="sub gridYr">
            <view class="title">总阅读量</view>
            <view class="remark">{{total_click}}</view>
        </view>
        <view class="sub">
            <view class="title">总赞数</view>
            <view class="remark">{{total_good}}</view>
        </view>
    </view>
</view>
<import src="../tpl.wxml"></import>
<template is="doc-list" data="{{data:data,styles:styles,comment:comment,config:config,hasMore:hasMore,isLoading:isLoading}}"></template>
