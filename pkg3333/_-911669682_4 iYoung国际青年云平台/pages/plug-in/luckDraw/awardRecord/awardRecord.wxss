.recordItem {
    position: relative;
    display: flex;
    justify-content: space-between;
    width: auto;
    margin: 20rpx 30rpx;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
    background-color: #fff;
    box-shadow: 0 0 20rpx rgba(0,0,0,.15);
}

.ntmBox {
    width: 70%;
}

.name {
    color: #333;
    line-height: 36rpx;
}

.duijiangma {
    color: #2a2a2a;
}

.copy-duijiangma {
    color: #5bb0ff;
    margin-left: 16rpx;
}

.cashing-code {
    align-self: flex-end;
    font-size: 38rpx;
}

.telBtn[plain] {
    font-size: 30rpx;
    line-height: 60rpx;
    background-color: #fff;
    color: #2a2a2a;
}

.telBtn::after {
    border: none;
}

.tagBox {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}

.code-popup {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
}

.popupbg {
    background: rgba(0,0,0,.3);
    width: 100%;
    height: 100%;
}

.code-pop-cont {
    background: #fff;
    z-index: 1;
    text-align: center;
    font-size: 28rpx;
    padding: 40rpx;
    border-radius: 6rpx;
    width: 600rpx;
}

.code-cont-title {
    font-size: 32rpx;
    color: #888;
}

.scand-img {
    width: 300rpx;
    height: 300rpx;
    margin: 0 auto;
}

.code-img {
    width: 360rpx;
    height: 360rpx;
    margin: 0 auto 20rpx;
}